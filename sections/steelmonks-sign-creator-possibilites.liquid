{% schema %}
{
  "name": "From This to That Timer",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Von diesem Foto"
    },
    {
      "type": "text",
      "id": "heading_2",
      "label": "Heading (right)",
      "default": "zu deinem Metallschild"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "in 2 Minuten"
    },
    {
      "type": "text",
      "id": "badge_left",
      "label": "Left badge",
      "default": "From this"
    },
    {
      "type": "text",
      "id": "badge_right",
      "label": "Right badge",
      "default": "To this"
    },
    {
      "type": "image_picker",
      "id": "from_image",
      "label": "From image (photo reference)"
    },
    {
      "type": "textarea",
      "id": "from_caption",
      "label": "From caption",
      "default": "Lade ein Foto oder eine Skizze hoch"
    },
    {
      "type": "image_picker",
      "id": "to_image",
      "label": "To image (metal sign)"
    },
    {
      "type": "textarea",
      "id": "to_caption",
      "label": "To caption",
      "default": "Wir verwandeln es in ein sauberes, schnittfähiges Schild"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Autoplay animation",
      "default": true
    },
    {
      "type": "range",
      "id": "duration_seconds",
      "min": 6,
      "max": 20,
      "step": 1,
      "unit": "s",
      "label": "Animation loop duration (visual)",
      "default": 10
    }
  ],
  "presets": [
    {
      "name": "From This to That Timer"
    }
  ]
}
{% endschema %}

<section id="sm-fromto-{{ section.id }}" class="smft" aria-label="From this to this in 2 minutes">
  <style>
    #sm-fromto-{{ section.id }}{
      --sm-ink: rgba(17,24,39,0.92);
      --sm-muted: rgba(17,24,39,0.70);
      --sm-stroke: rgba(17,24,39,0.12);
      --sm-stroke-2: rgba(17,24,39,0.18);
      --sm-white: rgba(255,255,255,0.95);
      --sm-glass: rgba(255,255,255,0.10);
      --sm-glass-2: rgba(255,255,255,0.14);
      --sm-shadow: 0 18px 40px rgba(0,0,0,0.10);
      --sm-shadow2: 0 12px 24px rgba(0,0,0,0.12);
      --sm-radius: 18px;
      --sm-radius-sm: 14px;

      --loop: {{ section.settings.duration_seconds | default: 10 }}s;
    }

    #sm-fromto-{{ section.id }} .smft__wrap{
      max-width: 1100px;
      margin: 0 auto;
      padding: 24px 16px 36px;
    }

    #sm-fromto-{{ section.id }} .smft__head{
      text-align: center;
      margin-bottom: 16px;
    }

    #sm-fromto-{{ section.id }} .smft__title{
      margin: 0;
      font-weight: 700;
      letter-spacing: -0.02em;
      color: var(--sm-ink);
      font-size: clamp(22px, 2.6vw, 34px);
      line-height: 1.1;
    }

    #sm-fromto-{{ section.id }} .smft__title span{
      display: inline-block;
    }

    #sm-fromto-{{ section.id }} .smft__sub{
      margin: 10px 0 0;
      color: var(--sm-muted);
      font-size: 13px;
      letter-spacing: 0.2px;
    }

    /* Main card */
    #sm-fromto-{{ section.id }} .smft__card{
      border-radius: var(--sm-radius);
      border: 1px solid var(--sm-stroke);
      background: rgba(255,255,255,0.55);
      box-shadow: 0 1px 0 rgba(255,255,255,0.65) inset, var(--sm-shadow);
      overflow: hidden;
      position: relative;
      isolation: isolate;
    }

    /* Layout */
    #sm-fromto-{{ section.id }} .smft__grid{
      display: grid;
      grid-template-columns: 1fr 120px 1fr;
      gap: 0;
      align-items: stretch;
    }

    @media (max-width: 900px){
      #sm-fromto-{{ section.id }} .smft__grid{
        grid-template-columns: 1fr;
      }
    }

    /* Image panels */
    #sm-fromto-{{ section.id }} .smft__panel{
      position: relative;
      overflow: hidden;
      min-height: 280px;
    }

    @media (max-width: 900px){
      #sm-fromto-{{ section.id }} .smft__panel{
        min-height: 220px;
      }
    }

    #sm-fromto-{{ section.id }} .smft__img{
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      transform: scale(1);
      transition: transform 520ms cubic-bezier(0.2,0.8,0.2,1), filter 320ms ease;
      will-change: transform, filter;
    }

    #sm-fromto-{{ section.id }} .smft__panel:hover .smft__img{
      transform: scale(1.04);
      filter: saturate(0.95);
    }

    /* Overlays */
    #sm-fromto-{{ section.id }} .smft__overlay{
      position: absolute;
      inset: 0;
      display: flex;
      align-items: flex-end;
      justify-content: center;
      padding: 14px;
      pointer-events: none;
      background:
        radial-gradient(120% 90% at 50% 0%, rgba(255,255,255,0.12) 0%, rgba(255,255,255,0.06) 40%, rgba(0,0,0,0.52) 100%),
        linear-gradient(180deg, rgba(0,0,0,0.02) 0%, rgba(0,0,0,0.62) 70%, rgba(0,0,0,0.82) 100%);
    }

    #sm-fromto-{{ section.id }} .smft__overlay-inner{
      width: 100%;
      border-radius: 16px;
      border: 1px solid rgba(255,255,255,0.14);
      background: rgba(0,0,0,0.18);
      box-shadow: 0 10px 28px rgba(0,0,0,0.20);
      padding: 10px 12px;
      color: rgba(255,255,255,0.94);
      text-shadow: 0 2px 14px rgba(0,0,0,0.45);
      backdrop-filter: blur(6px);
      -webkit-backdrop-filter: blur(6px);
      display: grid;
      gap: 8px;
    }

    #sm-fromto-{{ section.id }} .smft__badge{
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 7px 10px;
      border-radius: 999px;
      background: var(--sm-glass);
      border: 1px solid rgba(255,255,255,0.16);
      color: var(--sm-white);
      font-size: 12px;
      line-height: 1;
      letter-spacing: 0.2px;
      width: fit-content;
    }

    #sm-fromto-{{ section.id }} .smft__dot{
      width: 8px;
      height: 8px;
      border-radius: 50%;
      background: rgba(255,255,255,0.78);
      box-shadow: 0 0 0 4px rgba(255,255,255,0.10);
      opacity: 0.85;
    }

    #sm-fromto-{{ section.id }} .smft__cap{
      font-size: 12px;
      line-height: 1.35;
      letter-spacing: 0.15px;
      color: rgba(255,255,255,0.92);
      white-space: pre-wrap;
      word-break: break-word;
    }

    /* Middle timeline */
    #sm-fromto-{{ section.id }} .smft__mid{
      position: relative;
      padding: 18px 14px;
      display: grid;
      place-items: center;
      background:
        linear-gradient(180deg, rgba(255,255,255,0.34) 0%, rgba(255,255,255,0.18) 100%);
      border-left: 1px solid var(--sm-stroke);
      border-right: 1px solid var(--sm-stroke);
    }

    @media (max-width: 900px){
      #sm-fromto-{{ section.id }} .smft__mid{
        border-left: 0;
        border-right: 0;
        border-top: 1px solid var(--sm-stroke);
        border-bottom: 1px solid var(--sm-stroke);
      }
    }

    #sm-fromto-{{ section.id }} .smft__mid-inner{
      width: 100%;
      display: grid;
      gap: 12px;
      justify-items: center;
    }

    /* "2 minutes" pill */
    #sm-fromto-{{ section.id }} .smft__pill{
      display: inline-flex;
      align-items: center;
      gap: 10px;
      padding: 10px 12px;
      border-radius: 999px;
      border: 1px solid var(--sm-stroke);
      background: rgba(255,255,255,0.62);
      box-shadow: 0 1px 0 rgba(255,255,255,0.65) inset, var(--sm-shadow2);
      color: var(--sm-ink);
      font-size: 12px;
      letter-spacing: 0.2px;
      line-height: 1;
      user-select: none;
    }

    #sm-fromto-{{ section.id }} .smft__pill-dot{
      width: 10px;
      height: 10px;
      border-radius: 50%;
      background: rgba(17,24,39,0.78);
      box-shadow: 0 0 0 6px rgba(17,24,39,0.08);
    }

    /* Progress ring */
    #sm-fromto-{{ section.id }} .smft__ring{
      width: 84px;
      height: 84px;
      border-radius: 999px;
      border: 1px solid var(--sm-stroke);
      background: rgba(255,255,255,0.58);
      box-shadow: 0 1px 0 rgba(255,255,255,0.65) inset, var(--sm-shadow2);
      display: grid;
      place-items: center;
      position: relative;
      overflow: hidden;
      transform: translateZ(0);
    }

    #sm-fromto-{{ section.id }} .smft__ring:before{
      content: "";
      position: absolute;
      inset: 10px;
      border-radius: 999px;
      background: rgba(255,255,255,0.60);
      border: 1px solid rgba(17,24,39,0.10);
      box-shadow: 0 1px 0 rgba(255,255,255,0.7) inset;
    }

    #sm-fromto-{{ section.id }} .smft__ring svg{
      position: absolute;
      inset: 0;
      transform: rotate(-90deg);
    }

    #sm-fromto-{{ section.id }} .smft__ring circle{
      fill: none;
      stroke-width: 8;
      stroke-linecap: round;
    }

    #sm-fromto-{{ section.id }} .smft__ring .smft__track{
      stroke: rgba(17,24,39,0.12);
    }

    #sm-fromto-{{ section.id }} .smft__ring .smft__prog{
      stroke: rgba(17,24,39,0.82);
      stroke-dasharray: 251.2;
      stroke-dashoffset: 251.2;
      animation: smftRing var(--loop) linear infinite;
    }

    #sm-fromto-{{ section.id }} .smft__time{
      position: relative;
      z-index: 1;
      color: var(--sm-ink);
      font-weight: 700;
      letter-spacing: -0.01em;
      font-size: 14px;
    }

    /* Scanline shimmer */
    #sm-fromto-{{ section.id }} .smft__scan{
      width: 100%;
      height: 10px;
      border-radius: 999px;
      border: 1px solid rgba(17,24,39,0.12);
      background: rgba(255,255,255,0.55);
      box-shadow: 0 1px 0 rgba(255,255,255,0.65) inset;
      overflow: hidden;
      position: relative;
    }

    #sm-fromto-{{ section.id }} .smft__scan:before{
      content: "";
      position: absolute;
      top: -40%;
      left: -30%;
      width: 40%;
      height: 180%;
      background: linear-gradient(90deg, rgba(255,255,255,0) 0%, rgba(255,255,255,0.55) 45%, rgba(255,255,255,0) 100%);
      transform: skewX(-18deg);
      animation: smftScan var(--loop) cubic-bezier(0.2,0.8,0.2,1) infinite;
      opacity: 0.9;
    }

    /* Animated "processing" text */
    #sm-fromto-{{ section.id }} .smft__status{
      font-size: 12px;
      color: var(--sm-muted);
      letter-spacing: 0.2px;
      text-align: center;
      min-height: 18px;
    }

    #sm-fromto-{{ section.id }} .smft__status b{
      color: var(--sm-ink);
      font-weight: 650;
    }

    /* Autoplay gating: if disabled, freeze animations */
    #sm-fromto-{{ section.id }}[data-autoplay="0"] .smft__ring .smft__prog,
    #sm-fromto-{{ section.id }}[data-autoplay="0"] .smft__scan:before{
      animation: none !important;
    }

    /* Keyframes */
    @keyframes smftRing{
      0%{ stroke-dashoffset: 251.2; }
      100%{ stroke-dashoffset: 0; }
    }

    @keyframes smftScan{
      0%{ left: -45%; opacity: 0.0; }
      8%{ opacity: 0.9; }
      40%{ left: 110%; opacity: 0.9; }
      55%{ opacity: 0.0; }
      100%{ left: 110%; opacity: 0.0; }
    }

    /* Small polish for mobile */
    @media (max-width: 900px){
      #sm-fromto-{{ section.id }} .smft__mid{
        padding: 14px 14px;
      }
      #sm-fromto-{{ section.id }} .smft__ring{
        width: 76px;
        height: 76px;
      }
      #sm-fromto-{{ section.id }} .smft__scan{
        height: 9px;
      }
    }

    @media (prefers-reduced-motion: reduce){
      #sm-fromto-{{ section.id }} .smft__ring .smft__prog,
      #sm-fromto-{{ section.id }} .smft__scan:before,
      #sm-fromto-{{ section.id }} .smft__img{
        animation: none !important;
        transition: none !important;
      }
    }
  </style>

  <div class="smft__wrap">
    <div class="smft__head">
      <h2 class="smft__title">
        <span>{{ section.settings.heading }}</span>
        <span> {{ section.settings.heading_2 }}</span>
      </h2>
      <p class="smft__sub">{{ section.settings.subheading }}</p>
    </div>

    <div class="smft__card">
      <div class="smft__grid">
        {% comment %} LEFT {% endcomment %}
        <div class="smft__panel">
          {% if section.settings.from_image != blank %}
            <img
              class="smft__img"
              src="{{ section.settings.from_image | image_url: width: 1200 }}"
              alt="{{ section.settings.from_image.alt | escape }}"
              loading="lazy"
              width="1200"
              height="900"
            >
          {% else %}
            <img
              class="smft__img"
              src="https://placehold.co/1200x900"
              alt="Placeholder"
              loading="lazy"
              width="1200"
              height="900"
            >
          {% endif %}

          <div class="smft__overlay" aria-hidden="true">
            <div class="smft__overlay-inner">
              <span class="smft__badge"><span class="smft__dot" aria-hidden="true"></span>{{ section.settings.badge_left | escape }}</span>
              <div class="smft__cap">{{ section.settings.from_caption | escape }}</div>
            </div>
          </div>
        </div>

        {% comment %} MIDDLE {% endcomment %}
        <div class="smft__mid" aria-hidden="false">
          <div class="smft__mid-inner">
            <div class="smft__pill" aria-label="in 2 minutes">
              <span class="smft__pill-dot" aria-hidden="true"></span>
              <span><b>in 2 Minuten</b></span>
            </div>

            <div class="smft__ring" aria-label="Processing indicator">
              <svg viewBox="0 0 100 100" aria-hidden="true">
                <circle class="smft__track" cx="50" cy="50" r="40"></circle>
                <circle class="smft__prog" cx="50" cy="50" r="40"></circle>
              </svg>
              <div class="smft__time" id="smft-time-{{ section.id }}">02:00</div>
            </div>

            <div class="smft__scan" aria-hidden="true"></div>
            <div class="smft__status" id="smft-status-{{ section.id }}">Wir bauen deinen <b>Entwurf</b> …</div>
          </div>
        </div>

        {% comment %} RIGHT {% endcomment %}
        <div class="smft__panel">
          {% if section.settings.to_image != blank %}
            <img
              class="smft__img"
              src="{{ section.settings.to_image | image_url: width: 1200 }}"
              alt="{{ section.settings.to_image.alt | escape }}"
              loading="lazy"
              width="1200"
              height="900"
            >
          {% else %}
            <img
              class="smft__img"
              src="https://placehold.co/1200x900"
              alt="Placeholder"
              loading="lazy"
              width="1200"
              height="900"
            >
          {% endif %}

          <div class="smft__overlay" aria-hidden="true">
            <div class="smft__overlay-inner">
              <span class="smft__badge"><span class="smft__dot" aria-hidden="true"></span>{{ section.settings.badge_right | escape }}</span>
              <div class="smft__cap">{{ section.settings.to_caption | escape }}</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    (function(){
      var root = document.getElementById('sm-fromto-{{ section.id }}');
      if(!root) return;

      root.setAttribute('data-autoplay', {{ section.settings.autoplay | json }} ? '1' : '0');
      var timeEl = document.getElementById('smft-time-{{ section.id }}');
      var statusEl = document.getElementById('smft-status-{{ section.id }}');
      if(!timeEl) return;

      // Visual countdown synced to the loop duration, but always displays "02:00 -> 00:00" as a vibe.
      // Keeps it deterministic and lightweight (no heavy timers).
      var loopMs = ({{ section.settings.duration_seconds | default: 10 }} * 1000) || 10000;

      var labels = [
        'Wir prüfen dein <b>Motiv</b> …',
        'Wir bauen deinen <b>Entwurf</b> …',
        'Wir optimieren die <b>Konturen</b> …',
        'Wir finalisieren das <b>Schild</b> …'
      ];

      function pad(n){ return (n < 10 ? '0' : '') + n; }

      function tick(){
        if(root.getAttribute('data-autoplay') !== '1') return;

        var now = Date.now();
        var phase = (now % loopMs) / loopMs; // 0..1

        // Countdown: 120s -> 0s mapped to phase
        var seconds = Math.max(0, Math.round(120 * (1 - phase)));
        var mm = Math.floor(seconds / 60);
        var ss = seconds % 60;
        timeEl.textContent = pad(mm) + ':' + pad(ss);

        if(statusEl){
          var idx = Math.min(labels.length - 1, Math.floor(phase * labels.length));
          statusEl.innerHTML = labels[idx];
        }

        requestAnimationFrame(tick);
      }

      // Start
      requestAnimationFrame(tick);
    })();
  </script>
</section>