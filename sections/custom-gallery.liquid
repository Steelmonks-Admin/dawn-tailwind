{% schema %}
{
  "name": "Custom Gallery",
  "tag": "section",
  "settings": [
    {
      "type": "richtext",
      "id": "richtext",
      "label": "Gallery Heading/Description"
    }
  ],
  "blocks": [
    {
      "type": "image_row",
      "name": "Image Row",
      "settings": [
        { "type": "image_picker", "id": "image_1", "label": "Image 1" },
        { "type": "image_picker", "id": "image_2", "label": "Image 2" },
        { "type": "image_picker", "id": "image_3", "label": "Image 3" },
        { "type": "image_picker", "id": "image_4", "label": "Image 4" }
      ]
    }
  ],
  "presets": [{ "name": "Custom Gallery" }]
}
{% endschema %}

<div class='twcss-w-full twcss-py-12 twcss-px-4'>
  {% if section.settings.richtext != blank %}
    <div class='twcss-text-center twcss-mb-10 twcss-max-w-3xl twcss-mx-auto'>
      {{ section.settings.richtext }}
    </div>
  {% endif %}

  <div class='twcss-flex twcss-flex-col'>
    {% for block in section.blocks %}
      <div class='twcss-flex twcss-flex-wrap twcss-justify-center twcss-items-center twcss-m-0 twcss-p-0'>
        {% if block.settings.image_1 != blank %}
          <img
            src='{{ block.settings.image_1 | image_url: width: 340 }}'
            alt=''
            width='340'
            height='340'
            class='twcss-w-[200px] twcss-h-[200px] md:twcss-w-[340px] md:twcss-h-[340px] twcss-object-cover twcss-m-0 twcss-p-0'
            loading='lazy'
          >
        {% endif %}
        {% if block.settings.image_2 != blank %}
          <img
            src='{{ block.settings.image_2 | image_url: width: 340 }}'
            alt=''
            width='340'
            height='340'
            class='twcss-w-[200px] twcss-h-[200px] md:twcss-w-[340px] md:twcss-h-[340px] twcss-object-cover twcss-m-0 twcss-p-0'
            loading='lazy'
          >
        {% endif %}
        {% if block.settings.image_3 != blank %}
          <img
            src='{{ block.settings.image_3 | image_url: width: 340 }}'
            alt=''
            width='340'
            height='340'
            class='twcss-w-[200px] twcss-h-[200px] md:twcss-w-[340px] md:twcss-h-[340px] twcss-object-cover twcss-m-0 twcss-p-0'
            loading='lazy'
          >
        {% endif %}
        {% if block.settings.image_4 != blank %}
          <img
            src='{{ block.settings.image_4 | image_url: width: 340 }}'
            alt=''
            width='340'
            height='340'
            class='twcss-w-[200px] twcss-h-[200px] md:twcss-w-[340px] md:twcss-h-[340px] twcss-object-cover twcss-m-0 twcss-p-0'
            loading='lazy'
          >
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>
