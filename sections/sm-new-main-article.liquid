{%- style -%}
  .sm-article-breadcrumbs {
    margin-top: {{ section.settings.top_spacing }}px;
  }
{%- endstyle -%}

<article class='twcss-max-w-[900px] twcss-mx-auto twcss-px-4 sm:twcss-px-4 twcss-text-gray-900'>
  {%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when '@app' -%}
        <div {{ block.shopify_attributes }}>
          {% render block %}
        </div>
      {%- when 'featured_image' -%}
        {%- if article.image -%}
          <div
            class='twcss-mb-6 twcss-w-full twcss-overflow-hidden twcss-rounded-xl twcss-bg-gray-100'
            {{ block.shopify_attributes }}
          >
            <img
              srcset='
                {% if article.image.width >= 350 %}{{ article.image | image_url: width: 350 }} 350w,{% endif %}
                {% if article.image.width >= 750 %}{{ article.image | image_url: width: 750 }} 750w,{% endif %}
                {% if article.image.width >= 1100 %}{{ article.image | image_url: width: 1100 }} 1100w,{% endif %}
                {% if article.image.width >= 1500 %}{{ article.image | image_url: width: 1500 }} 1500w,{% endif %}
                {% if article.image.width >= 2200 %}{{ article.image | image_url: width: 2200 }} 2200w,{% endif %}
                {% if article.image.width >= 3000 %}{{ article.image | image_url: width: 3000 }} 3000w,{% endif %}
                {{ article.image | image_url }} {{ article.image.width }}w
              '
              sizes='(min-width: 900px) 800px, 100vw'
              src='{{ article.image | image_url: width: 1100 }}'
              loading='eager'
              fetchpriority='high'
              width='{{ article.image.width }}'
              height='{{ article.image.height }}'
              alt='{{ article.image.alt | escape }}'
              class='twcss-w-full twcss-h-auto twcss-block twcss-object-cover twcss-rounded-xl'
            >
          </div>
        {%- endif -%}
      {%- when 'title' -%}
        <header class='twcss-mb-6 twcss-text-left' {{ block.shopify_attributes }}>
          <h1 class='twcss-text-4xl sm:twcss-text-[2.5rem] twcss-font-bold twcss-mb-3 twcss-text-gray-900 twcss-leading-tight'>
            {{ article.title | escape }}
          </h1>
          {%- if block.settings.blog_show_date -%}
            <div class='twcss-text-base twcss-text-gray-500 twcss-mb-2'>
              {{- article.published_at | time_tag: format: 'date' -}}
            </div>
          {%- endif -%}
          {%- if block.settings.blog_show_author -%}
            <div class='twcss-text-base twcss-text-gray-500 twcss-mb-2'>
              <span>{{ article.author }}</span>
            </div>
          {%- endif -%}
        </header>
      {%- when 'content' -%}
        <div
          class='twcss-text-xl twcss-leading-relaxed twcss-mb-6 [&>*:first-child]:twcss-mt-0 [&>*:last-child]:twcss-mb-0'
          {{ block.shopify_attributes }}
        >
          {{ article.content }}
        </div>
      {%- when 'share' -%}
        <div class='twcss-flex twcss-justify-center twcss-items-center twcss-my-6' {{ block.shopify_attributes }}>
          {% assign share_url = request.origin | append: article.url %}
          {% render 'share-button', block: block, share_link: share_url %}
        </div>
      {%- when 'excerpt' -%}
        {%- if article.excerpt.size > 0 -%}
          <div
            class='twcss-text-xl twcss-text-gray-600 twcss-mb-4 twcss-leading-relaxed'
            {{ block.shopify_attributes }}
          >
            <p>{{ article.excerpt | strip_html }}</p>
          </div>
        {%- endif -%}
      {%- when 'back-to-blog' -%}
        <div class='twcss-text-center twcss-my-6' {{ block.shopify_attributes }}>
          <a
            href='{{ blog.url }}'
            class='twcss-inline-block twcss-bg-indigo-900 twcss-text-white twcss-px-8 twcss-py-3 twcss-rounded-lg twcss-font-semibold twcss-transition-colors hover:twcss-bg-indigo-950'
          >
            {{ 'blogs.article.back_to_blog' | t: title: blog.title | escape }}
          </a>
        </div>
      {%- when 'custom_breadcrumbs' -%}
        <nav
          class='sm-article-breadcrumbs twcss-mb-4 twcss-text-base twcss-text-gray-500 twcss-flex twcss-flex-wrap twcss-gap-2 twcss-items-center'
          {{ block.shopify_attributes }}
        >
          <a
            href='/blogs'
            class='twcss-text-indigo-900 twcss-no-underline hover:twcss-text-amber-500 twcss-transition-colors'
            >Home</a
          >
          <span>→</span>
          <a
            href='{{ blog.url }}'
            class='twcss-text-indigo-900 twcss-no-underline hover:twcss-text-amber-500 twcss-transition-colors'
          >
            {{- blog.title -}}
          </a>
          <span>→</span>
          <span>{{ article.title }}</span>
        </nav>
      {%- when 'hero_side_by_side' -%}
        <div class='twcss-my-6' {{ block.shopify_attributes }}>
          <div class='twcss-flex twcss-flex-col md:twcss-flex-row twcss-gap-6 md:twcss-gap-12 twcss-items-center twcss-justify-between twcss-max-w-[1200px] twcss-mx-auto'>
            <div class='twcss-flex-1 twcss-flex twcss-flex-col twcss-justify-center twcss-text-center md:twcss-text-left'>
              <h1 class='twcss-text-4xl sm:twcss-text-[2.5rem] twcss-font-bold twcss-mb-3 twcss-text-gray-900 twcss-leading-tight'>
                {{ article.title | escape }}
              </h1>
              {%- if article.excerpt.size > 0 -%}
                <div class='twcss-text-xl twcss-text-gray-600 twcss-mb-4 twcss-leading-relaxed sm:twcss-block twcss-hidden'>
                  <p>{{ article.excerpt | strip_html }}</p>
                </div>
              {%- endif -%}
            </div>
            {%- if article.image -%}
              <div class='twcss-flex-1 twcss-flex twcss-items-center twcss-justify-center'>
                <div class='twcss-bg-black twcss-rounded-xl twcss-overflow-hidden twcss-max-w-[600px] twcss-w-full'>
                  <img
                    src='{{ article.image | image_url: width: 600 }}'
                    alt='{{ article.image.alt | escape }}'
                    loading='eager'
                    width='600'
                    height='400'
                    class='twcss-w-full twcss-h-auto twcss-object-cover twcss-rounded-xl twcss-block'
                  >
                </div>
              </div>
            {%- endif -%}
          </div>
        </div>
    {%- endcase -%}
  {%- endfor -%}

  {%- assign has_back_to_blog_block = false -%}
  {%- for block in section.blocks -%}
    {%- if block.type == 'back-to-blog' -%}
      {%- assign has_back_to_blog_block = true -%}
    {%- endif -%}
  {%- endfor -%}
  {%- unless has_back_to_blog_block -%}
    <div class='twcss-text-center twcss-my-6'>
      <a
        href='{{ blog.url }}'
        class='twcss-inline-block twcss-bg-indigo-900 twcss-text-white twcss-px-8 twcss-py-3 twcss-rounded-lg twcss-font-semibold twcss-transition-colors hover:twcss-bg-indigo-950'
      >
        {{ 'blogs.article.back_to_blog' | t: title: blog.title | escape }}
      </a>
    </div>
  {%- endunless -%}

  {%- if blog.comments_enabled? -%}
    <div class='twcss-bg-gray-50 twcss-rounded-lg twcss-p-6 twcss-mt-8'>
      <div>
        {%- if article.comments_count > 0 -%}
          {%- assign anchorId = '#Comments-' | append: article.id -%}

          <h2 id='Comments-{{ article.id }}' tabindex='-1' class='twcss-text-2xl twcss-font-bold twcss-mb-4'>
            {{ 'blogs.article.comments' | t: count: article.comments_count }}
          </h2>
          {% paginate article.comments by 5 %}
            <div>
              {%- if comment.status == 'pending' and comment.content -%}
                <article class='twcss-mb-6 twcss-pb-4 twcss-border-b twcss-border-gray-200' id='{{ comment.id }}'>
                  {{ comment.content }}
                  <footer class='twcss-text-right twcss-text-sm twcss-text-gray-500'>
                    <span>{{ comment.author }}</span>
                  </footer>
                </article>
              {%- endif -%}

              {%- for comment in article.comments -%}
                <article
                  class='twcss-mb-6 twcss-pb-4 twcss-border-b twcss-border-gray-200 last:twcss-border-0'
                  id='{{ comment.id }}'
                >
                  {{ comment.content }}
                  <footer class='twcss-text-right twcss-text-sm twcss-text-gray-500'>
                    <span>{{ comment.author }}</span>
                    <span class='twcss-ml-2'>{{- comment.created_at | time_tag: format: 'date' -}}</span>
                  </footer>
                </article>
              {%- endfor -%}
              {% render 'pagination', paginate: paginate, anchor: anchorId %}
            </div>
          {% endpaginate %}
        {%- endif -%}
        {% form 'new_comment', article %}
          {%- liquid
            assign post_message = 'blogs.article.success'
            if blog.moderated? and comment.status == 'unapproved'
              assign post_message = 'blogs.article.success_moderated'
            endif
          -%}
          <h2 class='twcss-text-2xl twcss-font-bold twcss-mb-4'>{{ 'blogs.article.comment_form_title' | t }}</h2>
          {%- if form.errors -%}
            <div class='twcss-text-red-900 twcss-mb-3'>
              <h3 class='twcss-text-lg twcss-font-bold' tabindex='-1' autofocus>
                {{ 'templates.contact.form.error_heading' | t }}
              </h3>
            </div>
            <ul class='twcss-text-red-900'>
              {%- for field in form.errors -%}
                <li>
                  <a href='#CommentForm-{{ field }}' class='twcss-text-red-900'>
                    {%- if form.errors.translated_fields[field] contains 'author' -%}
                      {{ 'blogs.article.name' | t }}
                    {%- elsif form.errors.translated_fields[field] contains 'body' -%}
                      {{ 'blogs.article.message' | t }}
                    {%- else -%}
                      {{ form.errors.translated_fields[field] }}
                    {%- endif -%}
                    {{ form.errors.messages[field] }}
                  </a>
                </li>
              {%- endfor -%}
            </ul>
          {%- elsif form.posted_successfully? -%}
            <div class='twcss-text-green-700 twcss-mb-3'>
              <h3 class='twcss-text-lg twcss-font-bold' tabindex='-1' autofocus>
                {{ post_message | t }}
              </h3>
            </div>
          {%- endif -%}

          <div>
            <div>
              <div>
                <input
                  type='text'
                  name='comment[author]'
                  id='CommentForm-author'
                  class='twcss-w-full twcss-p-2 twcss-mb-2 twcss-border twcss-border-gray-300 twcss-rounded'
                  autocomplete='name'
                  value='{{ form.author }}'
                  aria-required='true'
                  required
                  {% if form.errors contains 'author' %}
                    aria-invalid='true'
                    aria-describedby='CommentForm-author-error'
                  {% endif %}
                  placeholder='{{ 'blogs.article.name' | t }}'
                >
                <label for='CommentForm-author' class='twcss-block twcss-mb-1'>
                  {{- 'blogs.article.name' | t }}
                  <span aria-hidden='true'>*</span></label
                >
                {%- if form.errors contains 'author' -%}
                  <small id='CommentForm-author-error' class='twcss-text-red-900'>
                    {{- 'blogs.article.name' | t }}
                    {{ form.errors.messages.author }}.
                  </small>
                {%- endif -%}
              </div>
              <div>
                <input
                  type='email'
                  name='comment[email]'
                  id='CommentForm-email'
                  autocomplete='email'
                  class='twcss-w-full twcss-p-2 twcss-mb-2 twcss-border twcss-border-gray-300 twcss-rounded'
                  value='{{ form.email }}'
                  autocorrect='off'
                  autocapitalize='off'
                  aria-required='true'
                  required
                  {% if form.errors contains 'email' %}
                    aria-invalid='true'
                    aria-describedby='CommentForm-email-error'
                  {% endif %}
                  placeholder='{{ 'blogs.article.email' | t }}'
                >
                <label for='CommentForm-email' class='twcss-block twcss-mb-1'>
                  {{- 'blogs.article.email' | t }}
                  <span aria-hidden='true'>*</span></label
                >
                {%- if form.errors contains 'email' -%}
                  <small id='CommentForm-email-error' class='twcss-text-red-900'>
                    {{- 'blogs.article.email' | t }}
                    {{ form.errors.messages.email }}.
                  </small>
                {%- endif -%}
              </div>
            </div>
            <div>
              <textarea
                rows='5'
                name='comment[body]'
                id='CommentForm-body'
                class='twcss-w-full twcss-p-2 twcss-mb-2 twcss-border twcss-border-gray-300 twcss-rounded'
                aria-required='true'
                required
                {% if form.errors contains 'body' %}
                  aria-invalid='true'
                  aria-describedby='CommentForm-body-error'
                {% endif %}
                placeholder='{{ 'blogs.article.message' | t }}'
              >{{ form.body }}</textarea>
              <label for='CommentForm-body' class='twcss-block twcss-mb-1'>
                {{- 'blogs.article.message' | t }}
                <span aria-hidden='true'>*</span></label
              >
              {%- if form.errors contains 'body' -%}
                <small id='CommentForm-body-error' class='twcss-text-red-900'>
                  {{- 'blogs.article.message' | t }}
                  {{ form.errors.messages.body }}.
                </small>
              {%- endif -%}
            </div>
          </div>
          {%- if blog.moderated? -%}
            <p class='twcss-text-gray-500 twcss-text-sm'>{{ 'blogs.article.moderated' | t }}</p>
          {%- endif -%}
          <input
            type='submit'
            value='{{ 'blogs.article.post' | t }}'
            class='twcss-bg-indigo-900 twcss-text-white twcss-px-7 twcss-py-2.5 twcss-rounded-lg twcss-font-semibold twcss-cursor-pointer twcss-mt-2 hover:twcss-bg-indigo-950 twcss-transition-colors'
          >
        {% endform %}
      </div>
    </div>
  {%- endif -%}
</article>

<script type='application/ld+json'>
  {{ article | structured_data }}
</script>

{% comment %} Debug section with script {% endcomment %}
<script>
  console.log('Debug section with script');
</script>

{% schema %}
{
  "name": "sm-new-main-article",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "top_spacing",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top spacing for breadcrumbs",
      "default": 36
    }
  ],
  "blocks": [
    { "type": "@app" },
    {
      "type": "featured_image",
      "name": "Featured Image",
      "limit": 1,
      "settings": [
        {
          "type": "select",
          "id": "image_height",
          "options": [
            { "value": "adapt", "label": "Adapt" },
            { "value": "small", "label": "Small" },
            { "value": "medium", "label": "Medium" },
            { "value": "large", "label": "Large" }
          ],
          "default": "adapt",
          "label": "Image Height",
          "info": "Choose the image height."
        }
      ]
    },
    {
      "type": "title",
      "name": "Title",
      "limit": 1,
      "settings": [
        { "type": "checkbox", "id": "blog_show_date", "default": true, "label": "Show Date" },
        { "type": "checkbox", "id": "blog_show_author", "default": false, "label": "Show Author" }
      ]
    },
    { "type": "content", "name": "Content", "limit": 1 },
    {
      "type": "share",
      "name": "Share",
      "limit": 1,
      "settings": [
        { "type": "text", "id": "share_label", "label": "Share Label", "default": "Share this article" },
        { "type": "paragraph", "content": "Share button info." },
        { "type": "paragraph", "content": "Title info." }
      ]
    },
    { "type": "excerpt", "name": "Excerpt", "limit": 1 },
    { "type": "back-to-blog", "name": "Back to Blog Button", "limit": 1 },
    { "type": "custom_breadcrumbs", "name": "Breadcrumbs", "limit": 1 },
    { "type": "hero_side_by_side", "name": "Hero Side by Side", "limit": 1 }
  ],
  "presets": [
    {
      "name": "SM New Main Article",
      "blocks": [
        { "type": "custom_breadcrumbs" },
        { "type": "hero_side_by_side" },
        { "type": "content" },
        { "type": "back-to-blog" },
        { "type": "share" }
      ]
    }
  ]
}
{% endschema %}
