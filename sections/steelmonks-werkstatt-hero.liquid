{% comment %}
  Werkstatt Floating Carousel V2 (circular rotate, no big background frame)
  - Center card always middle
  - Left/Right arrows sit left/right of highlighted card
  - Cards rotate around a circle (JS positions via sin/cos)
  - Square images, floating shadows not clipped (all wrappers overflow: visible)
  - "Verwandeln" button bottom-center inside image (not covering top)
  - Desktop hover shows subtle selection ring on hovered card
  - Prompt bar with small heading "Beschreibung"
  - Overlay is full card, same size, fades in 2s
{% endcomment %}

{% schema %}
{
  "name": "Werkstatt Carousel",
  "tag": "section",
  "settings": [
    { "type": "checkbox", "id": "autoplay", "label": "Autoplay", "default": true },
    { "type": "range", "id": "autoplay_seconds", "label": "Autoplay Sekunden", "default": 6, "min": 3, "max": 12, "step": 1 }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        { "type": "image_picker", "id": "base_image", "label": "Basisbild" },
        { "type": "image_picker", "id": "overlay_image", "label": "Overlay Bild (Schild)" },
        { "type": "textarea", "id": "prompt", "label": "Beschreibung (Prompt)", "default": "Beispiel Prompt" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Werkstatt Carousel",
      "blocks": [
        {
          "type": "slide",
          "settings": {
            "prompt": "Ein Bild von genau dem Hund aus dem Photo, die Kappe sollte Schwarz mit dem Logo ausgeschnitten sein."
          }
        },
        {
          "type": "slide",
          "settings": {
            "prompt": "Ein Bild von genau dem schönen Herren aus dem Photo, behalte alle Details bei und mach das Schild Schwarz mit ausgeschnittenen Details."
          }
        }
      ]
    }
  ]
}
{% endschema %}

<section id="smcc-{{ section.id }}" class="smcc" aria-label="Werkstatt Carousel">
  <style>
    #smcc-{{ section.id }}{
      --a1:#ff9800;
      --a2:#0044CC;

      --ink: rgba(9,10,12,0.92);
      --muted: rgba(9,10,12,0.68);

      --stroke: rgba(255,255,255,0.18);
      --glass: rgba(255,255,255,0.10);

      --shadow: 0 22px 70px rgba(15,23,42,0.18);
      --shadow2: 0 18px 54px rgba(15,23,42,0.16);

      --rCard: 26px;
      --fade: 2000ms;
      --ease: cubic-bezier(0.2,0.8,0.2,1);

      --cardSize: clamp(240px, 58vw, 420px);
      --stageH: clamp(320px, 68vw, 520px);
      --navOffset: 260px; /* will be overwritten by JS */

      overflow: visible;
      padding: clamp(10px, 2.6vw, 18px);
    }

    #smcc-{{ section.id }} .smcc__wrap{
      width: min(1240px, 100%);
      margin: 0 auto;
      overflow: visible;
      position: relative;
    }

    /* Stage (no background panel) */
    #smcc-{{ section.id }} .smcc__stage{
      position: relative;
      height: var(--stageH);
      overflow: visible;
      display: grid;
      place-items: center;
      padding: 10px 0 6px;
    }

    /* Nav buttons left/right of active card */
    #smcc-{{ section.id }} .smcc__navbtn{
      position: absolute;
      top: 50%;
      width: 46px;
      height: 46px;
      border-radius: 999px;
      border: 1px solid rgba(255,255,255,0.20);
      background: rgba(255,255,255,0.08);
      backdrop-filter: blur(14px);
      -webkit-backdrop-filter: blur(14px);
      box-shadow: 0 16px 40px rgba(15,23,42,0.12);
      cursor: pointer;
      display: grid;
      place-items: center;
      color: rgba(9,10,12,0.78);
      transition: transform 180ms var(--ease), filter 180ms ease, background 180ms ease;
      -webkit-tap-highlight-color: transparent;
      user-select: none;
      z-index: 50;
    }

    #smcc-{{ section.id }} .smcc__navbtn:hover{
      transform: translateY(-50%) scale(1.02);
      filter: brightness(1.03);
      background: rgba(255,255,255,0.12);
    }
    #smcc-{{ section.id }} .smcc__navbtn:active{
      transform: translateY(-50%) scale(0.98);
    }
    #smcc-{{ section.id }} .smcc__navbtn:focus-visible{
      outline: 3px solid rgba(0,68,204,0.35);
      outline-offset: 2px;
    }

    #smcc-{{ section.id }} .smcc__navbtn--prev{
      left: calc(50% - var(--navOffset));
      transform: translate(-100%, -50%);
    }
    #smcc-{{ section.id }} .smcc__navbtn--next{
      left: calc(50% + var(--navOffset));
      transform: translate(0, -50%);
    }

    /* Cards layer */
    #smcc-{{ section.id }} .smcc__cards{
      position: absolute;
      inset: 0;
      overflow: visible;
      pointer-events: none; /* cards enable via inner button */
    }

    #smcc-{{ section.id }} .smcc__card{
      position: absolute;
      left: 50%;
      top: 50%;
      width: var(--cardSize);
      height: var(--cardSize);
      transform: translate(-50%, -50%);
      border-radius: var(--rCard);
      opacity: 0;
      pointer-events: none;
      will-change: transform, opacity;
      isolation: isolate;
    }

    /* Floating glow outline */
    #smcc-{{ section.id }} .smcc__card:before{
      content:"";
      position:absolute;
      inset:-1px;
      border-radius: calc(var(--rCard) + 1px);
      padding: 1.5px;
      background: linear-gradient(135deg, rgba(255,152,0,0.70), rgba(0,68,204,0.60));
      -webkit-mask: linear-gradient(#000 0 0) content-box, linear-gradient(#000 0 0);
      -webkit-mask-composite: xor;
      mask-composite: exclude;
      opacity: 0.28;
      pointer-events:none;
      z-index: 0;
      transition: opacity 220ms ease;
    }

    #smcc-{{ section.id }} .smcc__card:after{
      content:"";
      position:absolute;
      inset:-14px;
      border-radius: calc(var(--rCard) + 18px);
      background:
        radial-gradient(60% 60% at 18% 10%, rgba(255,152,0,0.20), rgba(255,255,255,0) 62%),
        radial-gradient(60% 60% at 86% 10%, rgba(0,68,204,0.18), rgba(255,255,255,0) 62%);
      opacity: 0.20;
      filter: blur(14px);
      pointer-events:none;
      z-index: -1;
      transition: opacity 220ms ease;
    }

    #smcc-{{ section.id }} .smcc__card.is-active:before{ opacity: 0.85; }
    #smcc-{{ section.id }} .smcc__card.is-active:after{ opacity: 0.46; }

    /* Hover selection hint (desktop) */
    @media (hover:hover){
      #smcc-{{ section.id }} .smcc__card.is-hover:before{ opacity: 0.62; }
      #smcc-{{ section.id }} .smcc__card.is-hover .smcc__hint{
        opacity: 1;
        transform: translateY(0);
      }
    }

    #smcc-{{ section.id }} .smcc__frame{
      width: 100%;
      height: 100%;
      border-radius: var(--rCard);
      overflow: hidden;
      background: rgba(255,255,255,0.06);
      border: 1px solid rgba(255,255,255,0.12);
      box-shadow: var(--shadow);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      position: relative;
      z-index: 1;
      pointer-events: auto; /* enable clicking */
      cursor: pointer;
    }

    #smcc-{{ section.id }} .smcc__img,
    #smcc-{{ section.id }} .smcc__overlay{
      position:absolute;
      inset:0;
      width:100%;
      height:100%;
      object-fit: cover;
    }

    #smcc-{{ section.id }} .smcc__img{
      transform: scale(1.02);
      transition: transform 720ms var(--ease), filter 520ms ease;
      will-change: transform, filter;
    }

    #smcc-{{ section.id }} .smcc__overlay{
      opacity: 0;
      transition: opacity var(--fade) ease;
      will-change: opacity;
    }

    #smcc-{{ section.id }} .smcc__card.is-on .smcc__overlay{ opacity: 1; }
    #smcc-{{ section.id }} .smcc__card.is-on .smcc__img{ filter: blur(1.1px) brightness(0.88) saturate(0.92); }

    /* bottom-center button */
    #smcc-{{ section.id }} .smcc__toggle{
      position: absolute;
      left: 50%;
      bottom: 12px;
      transform: translateX(-50%);
      display: inline-flex;
      align-items: center;
      gap: 10px;
      padding: 10px 14px;
      border-radius: 999px;
      border: 1px solid rgba(255,255,255,0.18);
      background: rgba(9,10,12,0.22);
      backdrop-filter: blur(14px);
      -webkit-backdrop-filter: blur(14px);
      color: rgba(255,255,255,0.96);
      box-shadow: 0 18px 46px rgba(0,0,0,0.18);
      cursor: pointer;
      font-weight: 950;
      font-size: 12.5px;
      letter-spacing: 0.2px;
      -webkit-tap-highlight-color: transparent;
      user-select:none;

      opacity: 0;
      pointer-events: none;
      transition: opacity 220ms ease, filter 180ms ease, background 180ms ease, transform 180ms var(--ease);
      z-index: 2;
    }

    #smcc-{{ section.id }} .smcc__card.is-active .smcc__toggle{
      opacity: 1;
      pointer-events: auto;
    }

    #smcc-{{ section.id }} .smcc__toggle:hover{ filter: brightness(1.04); }
    #smcc-{{ section.id }} .smcc__toggle:active{ transform: translateX(-50%) scale(0.99); }
    #smcc-{{ section.id }} .smcc__toggle:focus-visible{ outline: 3px solid rgba(255,152,0,0.50); outline-offset: 2px; }

    #smcc-{{ section.id }} .smcc__pillDot{
      width: 10px;
      height: 10px;
      border-radius: 999px;
      background: linear-gradient(90deg, rgba(255,152,0,0.95), rgba(0,68,204,0.90));
      box-shadow: 0 0 0 6px rgba(255,152,0,0.18);
    }

    #smcc-{{ section.id }} .smcc__card.is-on .smcc__toggle{
      background: linear-gradient(90deg, rgba(0,35,94,0.78), rgba(0,68,204,0.78));
      border-color: rgba(255,255,255,0.16);
      box-shadow: 0 20px 56px rgba(0,35,94,0.22);
    }

    /* Tiny hover hint ring dot (desktop only) */
    #smcc-{{ section.id }} .smcc__hint{
      position:absolute;
      left: 14px;
      top: 14px;
      display:flex;
      align-items:center;
      gap: 8px;
      padding: 8px 10px;
      border-radius: 999px;
      border: 1px solid rgba(255,255,255,0.16);
      background: rgba(255,255,255,0.10);
      backdrop-filter: blur(12px);
      -webkit-backdrop-filter: blur(12px);
      box-shadow: 0 14px 34px rgba(15,23,42,0.10);
      color: rgba(255,255,255,0.92);
      font-weight: 900;
      font-size: 12px;

      opacity: 0;
      transform: translateY(-4px);
      transition: opacity 180ms ease, transform 180ms var(--ease);
      pointer-events:none;
      z-index: 3;
    }

    #smcc-{{ section.id }} .smcc__hintDot{
      width: 9px;
      height: 9px;
      border-radius: 999px;
      background: linear-gradient(90deg, rgba(255,152,0,0.95), rgba(0,68,204,0.90));
      box-shadow: 0 0 0 6px rgba(0,68,204,0.14);
    }

    /* Prompt bar */
    #smcc-{{ section.id }} .smcc__promptWrap{
      padding: 8px 6px 0;
      overflow: visible;
    }

    #smcc-{{ section.id }} .smcc__promptHead{
      font-weight: 950;
      font-size: 12px;
      letter-spacing: 0.08em;
      text-transform: uppercase;
      color: rgba(9,10,12,0.58);
      margin: 0 0 8px 10px;
      user-select:none;
    }

    #smcc-{{ section.id }} .smcc__prompt{
      border-radius: 24px;
      border: 1px solid rgba(255,255,255,0.16);
      background: rgba(255,255,255,0.08);
      backdrop-filter: blur(14px);
      -webkit-backdrop-filter: blur(14px);
      box-shadow: var(--shadow2);
      padding: 14px 14px;
      color: rgba(9,10,12,0.82);
      font-weight: 900;
      font-size: 13px;
      line-height: 1.35;

      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;

      transform: translateY(8px);
      opacity: 0;
      transition: opacity 240ms ease, transform 240ms var(--ease);
    }

    @media (hover:hover){
      #smcc-{{ section.id }} .smcc__wrap:hover .smcc__prompt,
      #smcc-{{ section.id }} .smcc__wrap:focus-within .smcc__prompt{
        opacity: 1;
        transform: translateY(0);
      }
    }

    @media (hover:none){
      #smcc-{{ section.id }} .smcc__prompt{
        opacity: 1;
        transform: translateY(0);
      }
    }

    @media (prefers-reduced-motion: reduce){
      #smcc-{{ section.id }} *{
        transition: none !important;
        animation: none !important;
      }
    }
  </style>

  <div class="smcc__wrap">
    <div class="smcc__stage">
      <button class="smcc__navbtn smcc__navbtn--prev" type="button" data-smcc-prev aria-label="Vorheriges">‹</button>

      <div class="smcc__cards" data-smcc-cards>
        {% for block in section.blocks %}
          {% if block.type == 'slide' %}
            {% liquid
              assign base_fallback = blank
              assign over_fallback = blank

              if block.settings.base_image == blank
                if forloop.index0 == 0
                  assign base_fallback = 'Werkstatt-Hero-1' | file_url
                elsif forloop.index0 == 1
                  assign base_fallback = 'Werkstatt-Hero-2-First' | file_url
                endif
              endif

              if block.settings.overlay_image == blank
                if forloop.index0 == 0
                  assign over_fallback = 'Werkstatt-Hero-1-Overlay' | file_url
                elsif forloop.index0 == 1
                  assign over_fallback = 'Werkstatt-Hero-2-Overlay' | file_url
                endif
              endif
            %}

            <article
              class="smcc__card"
              data-smcc-card
              data-index="{{ forloop.index0 }}"
              data-prompt="{{ block.settings.prompt | escape }}"
              {{ block.shopify_attributes }}
            >
              <div class="smcc__frame" data-smcc-frame role="button" tabindex="0" aria-label="Slide auswählen">
                {% if block.settings.base_image != blank %}
                  <img class="smcc__img" src="{{ block.settings.base_image | image_url: width: 1600 }}" alt="{{ block.settings.base_image.alt | escape }}" loading="lazy" width="1600" height="1600">
                {% elsif base_fallback != blank %}
                  <img class="smcc__img" src="{{ base_fallback }}" alt="Werkstatt Beispiel" loading="lazy" width="1600" height="1600">
                {% else %}
                  <img class="smcc__img" src="https://placehold.co/1600x1600" alt="Placeholder" loading="lazy" width="1600" height="1600">
                {% endif %}

                {% if block.settings.overlay_image != blank %}
                  <img class="smcc__overlay" src="{{ block.settings.overlay_image | image_url: width: 1600 }}" alt="" loading="lazy" width="1600" height="1600">
                {% elsif over_fallback != blank %}
                  <img class="smcc__overlay" src="{{ over_fallback }}" alt="" loading="lazy" width="1600" height="1600">
                {% else %}
                  <img class="smcc__overlay" src="https://placehold.co/1600x1600" alt="" loading="lazy" width="1600" height="1600">
                {% endif %}

                <div class="smcc__hint" aria-hidden="true">
                  <span class="smcc__hintDot"></span>
                  <span>Auswählen</span>
                </div>

                <button type="button" class="smcc__toggle" data-smcc-toggle aria-pressed="false">
                  <span class="smcc__pillDot" aria-hidden="true"></span>
                  <span class="smcc__toggleText">Verwandeln</span>
                </button>
              </div>
            </article>
          {% endif %}
        {% endfor %}
      </div>

      <button class="smcc__navbtn smcc__navbtn--next" type="button" data-smcc-next aria-label="Nächstes">›</button>
    </div>

    <div class="smcc__promptWrap" aria-label="Beschreibung">
      <div class="smcc__promptHead">Beschreibung</div>
      <div class="smcc__prompt" data-smcc-prompt></div>
    </div>
  </div>

  <script>
    (function(){
      var SECTION_ID = "{{ section.id }}";
      var root = document.getElementById("smcc-" + SECTION_ID);
      if(!root) return;

      var cardsWrap = root.querySelector("[data-smcc-cards]");
      var cards = Array.prototype.slice.call(root.querySelectorAll("[data-smcc-card]"));
      var prev = root.querySelector("[data-smcc-prev]");
      var next = root.querySelector("[data-smcc-next]");
      var promptEl = root.querySelector("[data-smcc-prompt]");

      if(!cardsWrap || !cards.length) return;

      var autoplay = {{ section.settings.autoplay | json }};
      var autoplayMs = ({{ section.settings.autoplay_seconds | default: 6 }} * 1000) || 6000;

      var active = 0;
      var hoverIdx = null;
      var timer = null;

      // overlay state per card
      var onState = cards.map(function(){ return false; });

      function mod(n,m){ return ((n % m) + m) % m; }

      // shortest circular diff
      function diff(i, a, n){
        var d = mod(i - a, n);
        if(d > n/2) d -= n;
        return d;
      }

      function setPrompt(idx){
        if(!promptEl) return;
        idx = Math.max(0, Math.min(cards.length - 1, idx));
        promptEl.textContent = cards[idx].getAttribute("data-prompt") || "";
      }

      function computeNavOffset(){
        // place arrows left/right of active card
        var cardSize = parseFloat(getComputedStyle(root).getPropertyValue("--cardSize")) || 320;
        var offset = (cardSize / 2) + 26;
        root.style.setProperty("--navOffset", offset + "px");
      }

      function render(){
        var n = cards.length;

        // geometry
        var cardSize = parseFloat(getComputedStyle(root).getPropertyValue("--cardSize")) || 320;
        var radiusX = Math.min(460, cardSize * 1.15);
        var radiusY = Math.min(90, cardSize * 0.22);
        var angleStep = 18; // degrees per step

        for(var i=0;i<n;i++){
          var d = diff(i, active, n);

          // show a few around center for performance
          var abs = Math.abs(d);
          var maxShow = 3;
          var show = abs <= maxShow;

          var el = cards[i];
          el.style.pointerEvents = show ? "auto" : "none";
          el.style.opacity = show ? String(Math.max(0, 1 - abs * 0.18)) : "0";

          // circle-ish rotation
          var ang = (d * angleStep) * (Math.PI / 180);
          var x = Math.sin(ang) * radiusX;
          var y = (1 - Math.cos(ang)) * radiusY;

          var s = Math.max(0.78, 1 - abs * 0.10);
          var z = 100 - abs * 10;

          // center is always crisp
          if(d === 0){
            el.classList.add("is-active");
            s = 1.08;
            z = 200;
            y = 0;
            x = 0;
          } else {
            el.classList.remove("is-active");
          }

          el.style.zIndex = String(z);
          el.style.transform = "translate(-50%, -50%) translate3d(" + x.toFixed(2) + "px," + y.toFixed(2) + "px,0) scale(" + s.toFixed(3) + ")";
          el.style.filter = (d === 0) ? "none" : "saturate(0.98)";

          // overlay class
          if(onState[i]) el.classList.add("is-on");
          else el.classList.remove("is-on");
        }

        // hover selection visuals
        cards.forEach(function(c, idx){
          if(hoverIdx !== null && idx === hoverIdx && idx !== active) c.classList.add("is-hover");
          else c.classList.remove("is-hover");
        });

        setPrompt((hoverIdx !== null) ? hoverIdx : active);
        computeNavOffset();
      }

      function go(dir){
        active = mod(active + dir, cards.length);
        hoverIdx = null;
        render();
      }

      function startAutoplay(){
        if(!autoplay) return;
        stopAutoplay();
        timer = setInterval(function(){ go(1); }, autoplayMs);
      }

      function stopAutoplay(){
        if(timer){ clearInterval(timer); timer = null; }
      }

      function bind(){
        if(prev) prev.addEventListener("click", function(){ stopAutoplay(); go(-1); });
        if(next) next.addEventListener("click", function(){ stopAutoplay(); go(1); });

        // Card click selects
        cards.forEach(function(card, idx){
          var frame = card.querySelector("[data-smcc-frame]");
          if(!frame) return;

          frame.addEventListener("click", function(e){
            var t = e.target;
            if(t && t.closest && t.closest("[data-smcc-toggle]")) return;
            stopAutoplay();
            active = idx;
            hoverIdx = null;
            render();
          });

          frame.addEventListener("keydown", function(e){
            if(e.key === "Enter" || e.key === " "){
              e.preventDefault();
              stopAutoplay();
              active = idx;
              hoverIdx = null;
              render();
            }
          });

          // Hover selection hint + prompt preview
          frame.addEventListener("mouseenter", function(){
            hoverIdx = idx;
            render();
          });
          frame.addEventListener("mouseleave", function(){
            hoverIdx = null;
            render();
          });
        });

        // Toggle only on active card, otherwise selects first
        root.querySelectorAll("[data-smcc-toggle]").forEach(function(btn){
          btn.addEventListener("click", function(e){
            e.preventDefault();
            e.stopPropagation();
            stopAutoplay();

            var card = btn.closest("[data-smcc-card]");
            if(!card) return;

            var idx = parseInt(card.getAttribute("data-index") || "0", 10);

            if(idx !== active){
              active = idx;
              hoverIdx = null;
              render();
              // keep click intent, toggle after selecting
            }

            onState[active] = !onState[active];
            btn.setAttribute("aria-pressed", onState[active] ? "true" : "false");

            var t = btn.querySelector(".smcc__toggleText");
            if(t) t.textContent = onState[active] ? "Zurück" : "Verwandeln";

            render();
          });
        });

        // Keyboard arrows
        root.addEventListener("keydown", function(e){
          if(e.key === "ArrowLeft"){ stopAutoplay(); go(-1); }
          if(e.key === "ArrowRight"){ stopAutoplay(); go(1); }
        });

        // Resize
        var ro = new ResizeObserver(function(){ render(); });
        ro.observe(root);
      }

      bind();
      render();
      startAutoplay();

      document.addEventListener("shopify:section:load", function(e){
        if(!e || !e.detail || !e.detail.sectionId) return;
        if(String(e.detail.sectionId) !== String(SECTION_ID)) return;
        stopAutoplay();
        render();
        startAutoplay();
      });
    })();
  </script>
</section>