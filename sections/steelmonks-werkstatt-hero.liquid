{% comment %}
  Werkstatt Carousel (FINAL)
  FIX (mobile overflow):
  - Prevent unselected/offscreen cards from creating horizontal page scroll on mobile
  - We clip ONLY the horizontal overflow at the section level (no visual layout changes)
{% endcomment %}

{% schema %}
{
  "name": "Werkstatt Carousel",
  "tag": "section",
  "settings": [
    { "type": "range", "id": "top_spacing", "label": "Abstand oben", "default": 18, "min": 0, "max": 160, "step": 2 },
    { "type": "range", "id": "bottom_spacing", "label": "Abstand unten", "default": 18, "min": 0, "max": 160, "step": 2 },
    { "type": "text", "id": "desc_heading", "label": "Beschreibung Überschrift", "default": "Beschreibung" },
    { "type": "checkbox", "id": "autoplay", "label": "Autoplay", "default": true },
    { "type": "range", "id": "autoplay_seconds", "label": "Autoplay Sekunden", "default": 6, "min": 3, "max": 12, "step": 1 }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        { "type": "image_picker", "id": "base_image", "label": "Basisbild" },
        { "type": "image_picker", "id": "overlay_image", "label": "Overlay Bild (Schild)" },
        { "type": "textarea", "id": "prompt", "label": "Beschreibung", "default": "Beispiel Prompt" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Werkstatt Carousel",
      "blocks": [
        {
          "type": "slide",
          "settings": {
            "prompt": "Ein Bild von genau dem Hund aus dem Photo, die Kappe sollte Schwarz mit dem Logo ausgeschnitten sein."
          }
        },
        {
          "type": "slide",
          "settings": {
            "prompt": "Ein Bild von genau dem schönen Herren aus dem Photo, behalte alle Details bei und mach das Schild Schwarz mit ausgeschnittenen Details."
          }
        }
      ]
    }
  ]
}
{% endschema %}

<section
  id="smwc-final-{{ section.id }}"
  class="smwc2"
  aria-label="Werkstatt Carousel"
  style="padding-top: {{ section.settings.top_spacing | default: 18 }}px; padding-bottom: {{ section.settings.bottom_spacing | default: 18 }}px;"
>
  <style>
    #smwc-final-{{ section.id }}{
      --a1:#ff9800;
      --a2:#0044CC;

      --shadow: 0 22px 70px rgba(15,23,42,0.18);
      --shadow2: 0 18px 54px rgba(15,23,42,0.16);

      --rCard: 26px;
      --fade: 2000ms;
      --ease: cubic-bezier(0.2,0.8,0.2,1);

      --cardSize: clamp(240px, 62vw, 460px);
      --stageH: clamp(330px, 72vw, 560px);

      --navOffset: 420px;

      /* ✅ prevents mobile page from being pushed wider by offscreen cards */
      overflow-x: hidden;
      overflow-x: clip;
      overflow-y: visible;
      position: relative;
      max-width: 100%;
    }

    #smwc-final-{{ section.id }} .smwc2__wrap{
      width: min(1440px, 100%);
      margin: 0 auto;
      overflow: visible;
      position: relative;
      padding: 0 12px;
      max-width: 100%;
    }

    #smwc-final-{{ section.id }} .smwc2__stage{
      position: relative;
      height: var(--stageH);
      overflow: visible;
      display: grid;
      place-items: center;
      padding: 8px 0 10px;
      touch-action: pan-y;
      user-select: none;
    }

    #smwc-final-{{ section.id }} .smwc2__cards{
      position: absolute;
      inset: 0;
      overflow: visible;
      pointer-events: none;
      perspective: 1100px;
      z-index: 1;
    }

    #smwc-final-{{ section.id }} .smwc2__navbtn{
      position: absolute;
      top: 50%;
      width: 46px;
      height: 46px;
      border-radius: 999px;
      border: 1px solid rgba(255,255,255,0.20);
      background: rgba(255,255,255,0.10);
      backdrop-filter: blur(14px);
      -webkit-backdrop-filter: blur(14px);
      box-shadow: 0 16px 40px rgba(15,23,42,0.12);
      cursor: pointer;
      display: grid;
      place-items: center;
      -webkit-tap-highlight-color: transparent;
      user-select: none;
      z-index: 9999;
      pointer-events: auto;
      touch-action: manipulation;
      transition: filter 180ms ease, background 180ms ease, transform 180ms var(--ease);
    }

    #smwc-final-{{ section.id }} .smwc2__navbtn svg{
      width: 18px;
      height: 18px;
      display: block;
      color: rgba(9,10,12,0.78);
    }

    #smwc-final-{{ section.id }} .smwc2__navbtn:hover{
      filter: brightness(1.03);
      background: rgba(255,255,255,0.14);
    }

    #smwc-final-{{ section.id }} .smwc2__navbtn:focus-visible{
      outline: 3px solid rgba(0,68,204,0.35);
      outline-offset: 2px;
    }

    #smwc-final-{{ section.id }} .smwc2__navbtn--prev{
      left: calc(50% - var(--navOffset));
      transform: translate(-100%, -50%);
    }
    #smwc-final-{{ section.id }} .smwc2__navbtn--next{
      left: calc(50% + var(--navOffset));
      transform: translate(0, -50%);
    }

    #smwc-final-{{ section.id }} .smwc2__navbtn--prev:active{ transform: translate(-100%, -50%) scale(0.98); }
    #smwc-final-{{ section.id }} .smwc2__navbtn--next:active{ transform: translate(0, -50%) scale(0.98); }

    #smwc-final-{{ section.id }} .smwc2__card{
      position: absolute;
      left: 50%;
      top: 50%;
      width: var(--cardSize);
      height: var(--cardSize);
      transform: translate(-50%, -50%);
      border-radius: var(--rCard);
      opacity: 0;
      pointer-events: none;
      isolation: isolate;
      will-change: transform, opacity, filter;
      transition:
        transform 760ms var(--ease),
        opacity 620ms ease,
        filter 620ms ease;
    }

    #smwc-final-{{ section.id }} .smwc2__card:before{
      content:"";
      position:absolute;
      inset:-1px;
      border-radius: calc(var(--rCard) + 1px);
      padding: 1.5px;
      background: linear-gradient(135deg, rgba(255,152,0,0.75), rgba(0,68,204,0.62));
      -webkit-mask: linear-gradient(#000 0 0) content-box, linear-gradient(#000 0 0);
      -webkit-mask-composite: xor;
      mask-composite: exclude;
      opacity: 0.14;
      pointer-events:none;
      z-index: 0;
      transition: opacity 260ms ease;
    }

    #smwc-final-{{ section.id }} .smwc2__card:after{
      content:"";
      position:absolute;
      inset:-18px;
      border-radius: calc(var(--rCard) + 22px);
      background:
        radial-gradient(60% 60% at 18% 10%, rgba(255,152,0,0.18), rgba(255,255,255,0) 62%),
        radial-gradient(60% 60% at 86% 10%, rgba(0,68,204,0.16), rgba(255,255,255,0) 62%);
      opacity: 0.12;
      filter: blur(16px);
      pointer-events:none;
      z-index: -1;
      transition: opacity 260ms ease;
    }

    #smwc-final-{{ section.id }} .smwc2__card.is-active:before{ opacity: 0.92; }
    #smwc-final-{{ section.id }} .smwc2__card.is-active:after{ opacity: 0.54; }

    #smwc-final-{{ section.id }} .smwc2__frame{
      width: 100%;
      height: 100%;
      border-radius: var(--rCard);
      overflow: hidden;
      background: rgba(255,255,255,0.06);
      border: 1px solid rgba(255,255,255,0.12);
      box-shadow: var(--shadow);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      position: relative;
      z-index: 1;
      pointer-events: auto;
      cursor: pointer;
      transform: translateZ(0);
    }

    #smwc-final-{{ section.id }} .smwc2__img,
    #smwc-final-{{ section.id }} .smwc2__overlay{
      position:absolute;
      inset:0;
      width:100%;
      height:100%;
      object-fit: cover;
      transform: none;
    }

    #smwc-final-{{ section.id }} .smwc2__overlay{
      opacity: 0;
      transition: opacity var(--fade) ease;
      will-change: opacity;
    }
    #smwc-final-{{ section.id }} .smwc2__card.is-on .smwc2__overlay{ opacity: 1; }
    #smwc-final-{{ section.id }} .smwc2__card.is-on .smwc2__img{ filter: blur(1.1px) brightness(0.88) saturate(0.92); }

    #smwc-final-{{ section.id }} .smwc2__toggle{
      position: absolute;
      left: 50%;
      bottom: 12px;
      transform: translateX(-50%);
      display: inline-flex;
      align-items: center;
      gap: 10px;
      padding: 10px 14px;
      border-radius: 999px;
      border: 1px solid rgba(255,255,255,0.18);
      background: rgba(9,10,12,0.22);
      backdrop-filter: blur(14px);
      -webkit-backdrop-filter: blur(14px);
      color: rgba(255,255,255,0.96);
      box-shadow: 0 18px 46px rgba(0,0,0,0.18);
      cursor: pointer;
      font-weight: 950;
      font-size: 12.5px;
      letter-spacing: 0.2px;
      -webkit-tap-highlight-color: transparent;
      user-select:none;

      opacity: 0;
      pointer-events: none;
      transition: opacity 220ms ease, filter 180ms ease, background 180ms ease, transform 180ms var(--ease);
      z-index: 2;
      max-width: calc(100% - 22px);
      white-space: nowrap;
    }

    #smwc-final-{{ section.id }} .smwc2__card.is-active .smwc2__toggle{
      opacity: 1;
      pointer-events: auto;
    }

    #smwc-final-{{ section.id }} .smwc2__pillDot{
      width: 10px;
      height: 10px;
      border-radius: 999px;
      background: linear-gradient(90deg, rgba(255,152,0,0.95), rgba(0,68,204,0.90));
      box-shadow: 0 0 0 6px rgba(255,152,0,0.18);
      flex: 0 0 auto;
    }

    #smwc-final-{{ section.id }} .smwc2__card.is-on .smwc2__toggle{
      background: linear-gradient(90deg, rgba(0,35,94,0.78), rgba(0,68,204,0.78));
      border-color: rgba(255,255,255,0.16);
      box-shadow: 0 20px 56px rgba(0,35,94,0.22);
    }

    #smwc-final-{{ section.id }} .smwc2__desc{
      margin-top: 10px;
      display: grid;
      justify-items: center;
      gap: 8px;
      text-align: center;
      padding: 0 8px;
      max-width: 100%;
    }

    #smwc-final-{{ section.id }} .smwc2__descHead{
      font-weight: 950;
      font-size: 12px;
      letter-spacing: 0.10em;
      text-transform: uppercase;
      color: rgba(9,10,12,0.58);
      margin: 0;
      user-select:none;
    }

    #smwc-final-{{ section.id }} .smwc2__descText{
      width: min(920px, 100%);
      border-radius: 24px;
      border: 1px solid rgba(255,255,255,0.16);
      background: rgba(255,255,255,0.08);
      backdrop-filter: blur(14px);
      -webkit-backdrop-filter: blur(14px);
      box-shadow: var(--shadow2);
      padding: 16px 16px;

      color: rgba(9,10,12,0.82);
      font-weight: 900;
      font-size: clamp(13px, 3.6vw, 16px);
      line-height: 1.35;

      white-space: normal;
      overflow-wrap: anywhere;
      word-break: break-word;
      hyphens: auto;

      min-height: var(--promptMinH, auto);

      transform: translateY(8px);
      opacity: 0;
      transition: opacity 240ms ease, transform 240ms var(--ease);
    }

    #smwc-final-{{ section.id }} .smwc2__measure{
      position: absolute !important;
      left: -9999px !important;
      top: 0 !important;
      visibility: hidden !important;
      opacity: 1 !important;
      transform: none !important;
      pointer-events: none !important;
      height: auto !important;
    }

    @media (hover:hover){
      #smwc-final-{{ section.id }} .smwc2__wrap:hover .smwc2__descText,
      #smwc-final-{{ section.id }} .smwc2__wrap:focus-within .smwc2__descText{
        opacity: 1;
        transform: translateY(0);
      }
    }
    @media (hover:none){
      #smwc-final-{{ section.id }} .smwc2__descText{
        opacity: 1;
        transform: translateY(0);
      }
    }

    @media (max-width: 520px){
      #smwc-final-{{ section.id }}{ --navOffset: 230px; }
      #smwc-final-{{ section.id }} .smwc2__navbtn{ width: 44px; height: 44px; }
    }

    @media (prefers-reduced-motion: reduce){
      #smwc-final-{{ section.id }} *{ transition: none !important; animation: none !important; }
    }
  </style>

  <div class="smwc2__wrap">
    <div class="smwc2__stage">
      <button class="smwc2__navbtn smwc2__navbtn--prev" type="button" data-smwc-prev aria-label="Vorheriges">
        <svg viewBox="0 0 24 24" fill="none" aria-hidden="true">
          <path d="M14.5 5.5L8.5 12l6 6.5" stroke="currentColor" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>

      <div class="smwc2__cards" data-smwc-cards>
        {% for block in section.blocks %}
          {% if block.type == 'slide' %}
            {% liquid
              assign base_fallback = blank
              assign over_fallback = blank

              if block.settings.base_image == blank
                if forloop.index0 == 0
                  assign base_fallback = 'Werkstatt-Hero-1' | file_url
                elsif forloop.index0 == 1
                  assign base_fallback = 'Werkstatt-Hero-2-First' | file_url
                endif
              endif

              if block.settings.overlay_image == blank
                if forloop.index0 == 0
                  assign over_fallback = 'Werkstatt-Hero-1-Overlay' | file_url
                elsif forloop.index0 == 1
                  assign over_fallback = 'Werkstatt-Hero-2-Overlay' | file_url
                endif
              endif
            %}

            <article class="smwc2__card" data-smwc-card data-index="{{ forloop.index0 }}" data-prompt="{{ block.settings.prompt | escape }}" {{ block.shopify_attributes }}>
              <div class="smwc2__frame" data-smwc-frame role="button" tabindex="0" aria-label="Slide auswählen">
                {% if block.settings.base_image != blank %}
                  <img class="smwc2__img" src="{{ block.settings.base_image | image_url: width: 1600 }}" alt="{{ block.settings.base_image.alt | escape }}" loading="lazy" width="1600" height="1600">
                {% elsif base_fallback != blank %}
                  <img class="smwc2__img" src="{{ base_fallback }}" alt="Werkstatt Beispiel" loading="lazy" width="1600" height="1600">
                {% else %}
                  <img class="smwc2__img" src="https://placehold.co/1600x1600" alt="Placeholder" loading="lazy" width="1600" height="1600">
                {% endif %}

                {% if block.settings.overlay_image != blank %}
                  <img class="smwc2__overlay" src="{{ block.settings.overlay_image | image_url: width: 1600 }}" alt="" loading="lazy" width="1600" height="1600">
                {% elsif over_fallback != blank %}
                  <img class="smwc2__overlay" src="{{ over_fallback }}" alt="" loading="lazy" width="1600" height="1600">
                {% else %}
                  <img class="smwc2__overlay" src="https://placehold.co/1600x1600" alt="" loading="lazy" width="1600" height="1600">
                {% endif %}

                <button type="button" class="smwc2__toggle" data-smwc-toggle aria-pressed="false">
                  <span class="smwc2__pillDot" aria-hidden="true"></span>
                  <span class="smwc2__toggleText">Verwandeln</span>
                </button>
              </div>
            </article>
          {% endif %}
        {% endfor %}
      </div>

      <button class="smwc2__navbtn smwc2__navbtn--next" type="button" data-smwc-next aria-label="Nächstes">
        <svg viewBox="0 0 24 24" fill="none" aria-hidden="true">
          <path d="M9.5 5.5L15.5 12l-6 6.5" stroke="currentColor" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    </div>

    <div class="smwc2__desc" aria-label="Beschreibung">
      <p class="smwc2__descHead">{{ section.settings.desc_heading | default: "Beschreibung" | escape }}</p>
      <div class="smwc2__descText" data-smwc-prompt></div>
      <div class="smwc2__descText smwc2__measure" data-smwc-measure aria-hidden="true"></div>
    </div>
  </div>

  <script>
    (function(){
      var SECTION_ID = "{{ section.id }}";
      var root = document.getElementById("smwc-final-" + SECTION_ID);
      if(!root) return;

      var cards = Array.prototype.slice.call(root.querySelectorAll("[data-smwc-card]"));
      var prev = root.querySelector("[data-smwc-prev]");
      var next = root.querySelector("[data-smwc-next]");
      var promptEl = root.querySelector("[data-smwc-prompt]");
      var measureEl = root.querySelector("[data-smwc-measure]");
      if(!cards.length) return;

      var autoplay = {{ section.settings.autoplay | json }};
      var autoplayMs = ({{ section.settings.autoplay_seconds | default: 6 }} * 1000) || 6000;

      var active = 0;
      var timer = null;
      var onState = cards.map(function(){ return false; });
      var isInteracting = false;

      function mod(n,m){ return ((n % m) + m) % m; }
      function diff(i, a, n){
        var d = mod(i - a, n);
        if(d > n/2) d -= n;
        return d;
      }

      function setPrompt(idx){
        if(!promptEl) return;
        idx = Math.max(0, Math.min(cards.length - 1, idx));
        promptEl.textContent = cards[idx].getAttribute("data-prompt") || "";
      }

      function computeLayout(){
        var cs = parseFloat(getComputedStyle(root).getPropertyValue("--cardSize")) || 320;
        var w = root.getBoundingClientRect().width || 1200;

        var rx = Math.min(Math.max(460, (w * 0.48)), 860);
        var ry = Math.min(Math.max(70, cs * 0.22), 120);

        var navOffset = (cs / 2) + Math.min(190, Math.max(120, w * 0.11));
        root.style.setProperty("--navOffset", navOffset + "px");

        return { rx: rx, ry: ry };
      }

      function computeMaxPromptHeight(){
        if(!promptEl || !measureEl) return;

        var w = Math.max(240, Math.floor(promptEl.getBoundingClientRect().width || 0));
        measureEl.style.width = w + "px";

        var maxH = 0;
        for(var i=0;i<cards.length;i++){
          var txt = cards[i].getAttribute("data-prompt") || "";
          measureEl.textContent = txt;
          var h = Math.ceil(measureEl.scrollHeight || 0);
          if(h > maxH) maxH = h;
        }

        if(maxH > 0){
          promptEl.style.minHeight = maxH + "px";
          root.style.setProperty("--promptMinH", maxH + "px");
        }
      }

      function render(){
        var n = cards.length;
        var layout = computeLayout();
        var rx = layout.rx;
        var ry = layout.ry;

        var stepDeg = (n <= 6) ? 22 : (n <= 9 ? 16 : 12);
        var maxShow = (n <= 6) ? 3 : 4;

        for(var i=0;i<n;i++){
          var d = diff(i, active, n);
          var abs = Math.abs(d);
          var show = abs <= maxShow;

          var el = cards[i];

          var ang = (d * stepDeg) * (Math.PI / 180);
          var x = Math.sin(ang) * rx;
          var y = (1 - Math.cos(ang)) * ry;

          var s = (abs === 0) ? 1.10 : Math.max(0.46, 0.76 - abs * 0.10);
          var op = show ? Math.max(0.08, 0.48 - abs * 0.16) : 0;
          var blur = (abs === 0) ? 0 : Math.min(11, 6 + abs * 1.6);

          if(d === 0){
            el.classList.add("is-active");
            x = 0; y = 0;
            op = 1; blur = 0;
          } else {
            el.classList.remove("is-active");
          }

          el.style.opacity = String(op);
          el.style.filter = "blur(" + blur.toFixed(2) + "px)";
          el.style.zIndex = String(500 - abs * 40);

          el.style.transform =
            "translate(-50%, -50%) translate3d(" + x.toFixed(2) + "px," + y.toFixed(2) + "px,0) scale(" + s.toFixed(3) + ")";

          if(onState[i]) el.classList.add("is-on");
          else el.classList.remove("is-on");

          el.style.pointerEvents = (d === 0) ? "auto" : "none";
        }

        setPrompt(active);
      }

      function go(dir){
        active = mod(active + dir, cards.length);
        render();
      }

      function stopAutoplay(){
        if(timer){ clearInterval(timer); timer = null; }
      }

      function startAutoplay(){
        if(!autoplay) return;
        stopAutoplay();
        timer = setInterval(function(){
          if(isInteracting) return;
          go(1);
        }, autoplayMs);
      }

      function bindNav(btn, dir){
        if(!btn) return;

        var lastNavAt = 0;

        function navOnce(e){
          var now = Date.now();

          if(e && e.type === "click" && btn.__blockClickUntil && now < btn.__blockClickUntil){
            if(e.preventDefault) e.preventDefault();
            if(e.stopPropagation) e.stopPropagation();
            return;
          }

          if(now - lastNavAt < 240) {
            if(e && e.stopPropagation) e.stopPropagation();
            return;
          }
          lastNavAt = now;

          if(e && e.type !== "click"){
            btn.__blockClickUntil = now + 500;
          }

          if(e && e.stopPropagation) e.stopPropagation();

          isInteracting = false;
          stopAutoplay();
          go(dir);
          startAutoplay();
        }

        btn.addEventListener("pointerdown", function(e){
          if(e && e.stopPropagation) e.stopPropagation();
        }, true);

        btn.addEventListener("pointerup", navOnce, true);
        btn.addEventListener("click", navOnce, true);

        btn.addEventListener("touchend", function(e){
          if(e && e.preventDefault) e.preventDefault();
          navOnce(e);
        }, { passive: false, capture: true });
      }

      function bind(){
        bindNav(prev, -1);
        bindNav(next,  1);

        var startX = 0;
        var dx = 0;

        root.addEventListener("pointerdown", function(e){
          if(e.target && e.target.closest && e.target.closest("[data-smwc-prev],[data-smwc-next]")) return;
          isInteracting = true;
          stopAutoplay();
          startX = e.clientX;
          dx = 0;
        }, { passive: true });

        root.addEventListener("pointermove", function(e){
          if(!isInteracting) return;
          dx = e.clientX - startX;
        }, { passive: true });

        root.addEventListener("pointerup", function(){
          if(!isInteracting) return;
          isInteracting = false;
          if(Math.abs(dx) > 40){
            go(dx > 0 ? -1 : 1);
          }
          startAutoplay();
        }, { passive: true });

        root.querySelectorAll("[data-smwc-toggle]").forEach(function(btn){
          btn.addEventListener("click", function(e){
            e.preventDefault();
            e.stopPropagation();
            stopAutoplay();

            var card = btn.closest("[data-smwc-card]");
            if(!card) return;

            var idx = parseInt(card.getAttribute("data-index") || "0", 10);
            if(idx !== active) active = idx;

            onState[active] = !onState[active];
            btn.setAttribute("aria-pressed", onState[active] ? "true" : "false");

            var t = btn.querySelector(".smwc2__toggleText");
            if(t) t.textContent = onState[active] ? "Zurück" : "Verwandeln";

            render();
            startAutoplay();
          });
        });

        root.addEventListener("keydown", function(e){
          if(e.key === "ArrowLeft"){ stopAutoplay(); go(-1); startAutoplay(); }
          if(e.key === "ArrowRight"){ stopAutoplay(); go(1); startAutoplay(); }
        });

        var ro = new ResizeObserver(function(){
          render();
          computeMaxPromptHeight();
        });
        ro.observe(root);
      }

      bind();
      render();

      requestAnimationFrame(function(){
        computeMaxPromptHeight();
      });
      if(document.fonts && document.fonts.ready){
        document.fonts.ready.then(function(){ computeMaxPromptHeight(); });
      }

      startAutoplay();

      document.addEventListener("shopify:section:load", function(e){
        if(!e || !e.detail || !e.detail.sectionId) return;
        if(String(e.detail.sectionId) !== String(SECTION_ID)) return;
        stopAutoplay();
        render();
        computeMaxPromptHeight();
        startAutoplay();
      });
    })();
