{% comment %}
  Werkstatt Carousel
  - Name fits 25 char limit
  - No hover transforms (keeps overlay pixel-perfect)
  - Arrows sit next to the main (active) card, not on top
  - Non-selected cards smaller + more spaced out on desktop (wider spread)
  - Square cards, smooth circular slide animation, mobile optimized
  - "Verwandeln" bottom center
  - Description centered below with heading "Beschreibung"
{% endcomment %}

{% schema %}
{
  "name": "Werkstatt Carousel",
  "tag": "section",
  "settings": [
    { "type": "checkbox", "id": "autoplay", "label": "Autoplay", "default": true },
    { "type": "range", "id": "autoplay_seconds", "label": "Autoplay Sekunden", "default": 6, "min": 3, "max": 12, "step": 1 }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        { "type": "image_picker", "id": "base_image", "label": "Basisbild" },
        { "type": "image_picker", "id": "overlay_image", "label": "Overlay Bild (Schild)" },
        { "type": "textarea", "id": "prompt", "label": "Beschreibung", "default": "Beispiel Prompt" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Werkstatt Carousel",
      "blocks": [
        {
          "type": "slide",
          "settings": {
            "prompt": "Ein Bild von genau dem Hund aus dem Photo, die Kappe sollte Schwarz mit dem Logo ausgeschnitten sein."
          }
        },
        {
          "type": "slide",
          "settings": {
            "prompt": "Ein Bild von genau dem schönen Herren aus dem Photo, behalte alle Details bei und mach das Schild Schwarz mit ausgeschnittenen Details."
          }
        }
      ]
    }
  ]
}
{% endschema %}

<section id="smwc-{{ section.id }}" class="smwc" aria-label="Werkstatt Carousel">
  <style>
    #smwc-{{ section.id }}{
      --a1:#ff9800;
      --a2:#0044CC;

      --ink: rgba(9,10,12,0.92);

      --stroke: rgba(255,255,255,0.18);
      --shadow: 0 22px 70px rgba(15,23,42,0.18);
      --shadow2: 0 18px 54px rgba(15,23,42,0.16);

      --rCard: 26px;
      --fade: 2000ms;
      --ease: cubic-bezier(0.2,0.8,0.2,1);

      --cardSize: clamp(240px, 62vw, 460px);
      --stageH: clamp(330px, 72vw, 560px);

      /* desktop spread defaults (JS will refine) */
      --navOffset: 310px;
      --rx: 560px;
      --ry: 128px;
      --stepDeg: 18deg;

      padding: clamp(10px, 2.6vw, 18px);
      overflow: visible;
    }

    #smwc-{{ section.id }} .smwc__wrap{
      width: min(1380px, 100%);
      margin: 0 auto;
      overflow: visible;
      position: relative;
    }

    #smwc-{{ section.id }} .smwc__stage{
      position: relative;
      height: var(--stageH);
      overflow: visible;
      display: grid;
      place-items: center;
      padding: 8px 0 10px;
      touch-action: pan-y;
    }

    /* Arrows next to main card (outside), not overlaying */
    #smwc-{{ section.id }} .smwc__navbtn{
      position: absolute;
      top: 50%;
      width: 46px;
      height: 46px;
      border-radius: 999px;
      border: 1px solid rgba(255,255,255,0.20);
      background: rgba(255,255,255,0.10);
      backdrop-filter: blur(14px);
      -webkit-backdrop-filter: blur(14px);
      box-shadow: 0 16px 40px rgba(15,23,42,0.12);
      cursor: pointer;
      display: grid;
      place-items: center;
      color: rgba(9,10,12,0.78);
      -webkit-tap-highlight-color: transparent;
      user-select: none;
      z-index: 60;
      transition: transform 180ms var(--ease), filter 180ms ease, background 180ms ease;
    }

    #smwc-{{ section.id }} .smwc__navbtn svg{
      width: 18px;
      height: 18px;
      display: block;
      color: rgba(9,10,12,0.78);
    }

    #smwc-{{ section.id }} .smwc__navbtn:hover{
      filter: brightness(1.03);
      background: rgba(255,255,255,0.14);
    }
    #smwc-{{ section.id }} .smwc__navbtn:active{ transform: translateY(-50%) scale(0.98); }
    #smwc-{{ section.id }} .smwc__navbtn:focus-visible{ outline: 3px solid rgba(0,68,204,0.35); outline-offset: 2px; }

    #smwc-{{ section.id }} .smwc__navbtn--prev{
      left: calc(50% - var(--navOffset));
      transform: translate(-100%, -50%);
    }
    #smwc-{{ section.id }} .smwc__navbtn--next{
      left: calc(50% + var(--navOffset));
      transform: translate(0, -50%);
    }

    /* Cards layer */
    #smwc-{{ section.id }} .smwc__cards{
      position: absolute;
      inset: 0;
      overflow: visible;
      pointer-events: none;
      perspective: 1100px;
    }

    #smwc-{{ section.id }} .smwc__card{
      position: absolute;
      left: 50%;
      top: 50%;
      width: var(--cardSize);
      height: var(--cardSize);
      transform: translate(-50%, -50%);
      border-radius: var(--rCard);
      opacity: 0;
      pointer-events: none;
      isolation: isolate;

      will-change: transform, opacity, filter;
      transition:
        transform 720ms var(--ease),
        opacity 560ms ease,
        filter 560ms ease;
    }

    /* glow outline + shadow not clipped */
    #smwc-{{ section.id }} .smwc__card:before{
      content:"";
      position:absolute;
      inset:-1px;
      border-radius: calc(var(--rCard) + 1px);
      padding: 1.5px;
      background: linear-gradient(135deg, rgba(255,152,0,0.75), rgba(0,68,204,0.62));
      -webkit-mask: linear-gradient(#000 0 0) content-box, linear-gradient(#000 0 0);
      -webkit-mask-composite: xor;
      mask-composite: exclude;
      opacity: 0.26;
      pointer-events:none;
      z-index: 0;
      transition: opacity 260ms ease;
    }

    #smwc-{{ section.id }} .smwc__card:after{
      content:"";
      position:absolute;
      inset:-18px;
      border-radius: calc(var(--rCard) + 22px);
      background:
        radial-gradient(60% 60% at 18% 10%, rgba(255,152,0,0.22), rgba(255,255,255,0) 62%),
        radial-gradient(60% 60% at 86% 10%, rgba(0,68,204,0.20), rgba(255,255,255,0) 62%);
      opacity: 0.18;
      filter: blur(16px);
      pointer-events:none;
      z-index: -1;
      transition: opacity 260ms ease;
    }

    #smwc-{{ section.id }} .smwc__card.is-active:before{ opacity: 0.92; }
    #smwc-{{ section.id }} .smwc__card.is-active:after{ opacity: 0.54; }

    #smwc-{{ section.id }} .smwc__frame{
      width: 100%;
      height: 100%;
      border-radius: var(--rCard);
      overflow: hidden;
      background: rgba(255,255,255,0.06);
      border: 1px solid rgba(255,255,255,0.12);
      box-shadow: var(--shadow);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      position: relative;
      z-index: 1;
      pointer-events: auto;
      cursor: pointer;
      transform: translateZ(0);
    }

    #smwc-{{ section.id }} .smwc__img,
    #smwc-{{ section.id }} .smwc__overlay{
      position:absolute;
      inset:0;
      width:100%;
      height:100%;
      object-fit: cover;
      transform: none; /* ensures overlay stays perfect */
    }

    #smwc-{{ section.id }} .smwc__overlay{
      opacity: 0;
      transition: opacity var(--fade) ease;
      will-change: opacity;
    }
    #smwc-{{ section.id }} .smwc__card.is-on .smwc__overlay{ opacity: 1; }
    #smwc-{{ section.id }} .smwc__card.is-on .smwc__img{ filter: blur(1.1px) brightness(0.88) saturate(0.92); }

    /* Button bottom center */
    #smwc-{{ section.id }} .smwc__toggle{
      position: absolute;
      left: 50%;
      bottom: 12px;
      transform: translateX(-50%);
      display: inline-flex;
      align-items: center;
      gap: 10px;
      padding: 10px 14px;
      border-radius: 999px;
      border: 1px solid rgba(255,255,255,0.18);
      background: rgba(9,10,12,0.22);
      backdrop-filter: blur(14px);
      -webkit-backdrop-filter: blur(14px);
      color: rgba(255,255,255,0.96);
      box-shadow: 0 18px 46px rgba(0,0,0,0.18);
      cursor: pointer;
      font-weight: 950;
      font-size: 12.5px;
      letter-spacing: 0.2px;
      -webkit-tap-highlight-color: transparent;
      user-select:none;

      opacity: 0;
      pointer-events: none;
      transition: opacity 220ms ease, filter 180ms ease, background 180ms ease, transform 180ms var(--ease);
      z-index: 2;
    }

    #smwc-{{ section.id }} .smwc__card.is-active .smwc__toggle{
      opacity: 1;
      pointer-events: auto;
    }

    #smwc-{{ section.id }} .smwc__toggle:hover{ filter: brightness(1.04); }
    #smwc-{{ section.id }} .smwc__toggle:active{ transform: translateX(-50%) scale(0.99); }
    #smwc-{{ section.id }} .smwc__toggle:focus-visible{ outline: 3px solid rgba(255,152,0,0.50); outline-offset: 2px; }

    #smwc-{{ section.id }} .smwc__pillDot{
      width: 10px;
      height: 10px;
      border-radius: 999px;
      background: linear-gradient(90deg, rgba(255,152,0,0.95), rgba(0,68,204,0.90));
      box-shadow: 0 0 0 6px rgba(255,152,0,0.18);
    }

    #smwc-{{ section.id }} .smwc__card.is-on .smwc__toggle{
      background: linear-gradient(90deg, rgba(0,35,94,0.78), rgba(0,68,204,0.78));
      border-color: rgba(255,255,255,0.16);
      box-shadow: 0 20px 56px rgba(0,35,94,0.22);
    }

    /* Description centered */
    #smwc-{{ section.id }} .smwc__desc{
      margin-top: 10px;
      display: grid;
      justify-items: center;
      gap: 8px;
      text-align: center;
      padding: 0 8px;
    }

    #smwc-{{ section.id }} .smwc__descHead{
      font-weight: 950;
      font-size: 12px;
      letter-spacing: 0.10em;
      text-transform: uppercase;
      color: rgba(9,10,12,0.58);
      margin: 0;
      user-select:none;
    }

    #smwc-{{ section.id }} .smwc__descText{
      width: min(920px, 100%);
      border-radius: 24px;
      border: 1px solid rgba(255,255,255,0.16);
      background: rgba(255,255,255,0.08);
      backdrop-filter: blur(14px);
      -webkit-backdrop-filter: blur(14px);
      box-shadow: var(--shadow2);
      padding: 14px 14px;
      color: rgba(9,10,12,0.82);
      font-weight: 900;
      font-size: 13px;
      line-height: 1.35;

      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;

      transform: translateY(8px);
      opacity: 0;
      transition: opacity 240ms ease, transform 240ms var(--ease);
    }

    @media (hover:hover){
      #smwc-{{ section.id }} .smwc__wrap:hover .smwc__descText,
      #smwc-{{ section.id }} .smwc__wrap:focus-within .smwc__descText{
        opacity: 1;
        transform: translateY(0);
      }
    }
    @media (hover:none){
      #smwc-{{ section.id }} .smwc__descText{
        opacity: 1;
        transform: translateY(0);
      }
    }

    @media (max-width: 520px){
      #smwc-{{ section.id }} .smwc__navbtn{
        width: 44px;
        height: 44px;
      }
    }

    @media (prefers-reduced-motion: reduce){
      #smwc-{{ section.id }} *{ transition: none !important; animation: none !important; }
    }
  </style>

  <div class="smwc__wrap">
    <div class="smwc__stage">
      <button class="smwc__navbtn smwc__navbtn--prev" type="button" data-smwc-prev aria-label="Vorheriges">
        <svg viewBox="0 0 24 24" fill="none" aria-hidden="true">
          <path d="M14.5 5.5L8.5 12l6 6.5" stroke="currentColor" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>

      <div class="smwc__cards" data-smwc-cards>
        {% for block in section.blocks %}
          {% if block.type == 'slide' %}
            {% liquid
              assign base_fallback = blank
              assign over_fallback = blank

              if block.settings.base_image == blank
                if forloop.index0 == 0
                  assign base_fallback = 'Werkstatt-Hero-1' | file_url
                elsif forloop.index0 == 1
                  assign base_fallback = 'Werkstatt-Hero-2-First' | file_url
                endif
              endif

              if block.settings.overlay_image == blank
                if forloop.index0 == 0
                  assign over_fallback = 'Werkstatt-Hero-1-Overlay' | file_url
                elsif forloop.index0 == 1
                  assign over_fallback = 'Werkstatt-Hero-2-Overlay' | file_url
                endif
              endif
            %}

            <article class="smwc__card" data-smwc-card data-index="{{ forloop.index0 }}" data-prompt="{{ block.settings.prompt | escape }}" {{ block.shopify_attributes }}>
              <div class="smwc__frame" data-smwc-frame role="button" tabindex="0" aria-label="Slide auswählen">
                {% if block.settings.base_image != blank %}
                  <img class="smwc__img" src="{{ block.settings.base_image | image_url: width: 1600 }}" alt="{{ block.settings.base_image.alt | escape }}" loading="lazy" width="1600" height="1600">
                {% elsif base_fallback != blank %}
                  <img class="smwc__img" src="{{ base_fallback }}" alt="Werkstatt Beispiel" loading="lazy" width="1600" height="1600">
                {% else %}
                  <img class="smwc__img" src="https://placehold.co/1600x1600" alt="Placeholder" loading="lazy" width="1600" height="1600">
                {% endif %}

                {% if block.settings.overlay_image != blank %}
                  <img class="smwc__overlay" src="{{ block.settings.overlay_image | image_url: width: 1600 }}" alt="" loading="lazy" width="1600" height="1600">
                {% elsif over_fallback != blank %}
                  <img class="smwc__overlay" src="{{ over_fallback }}" alt="" loading="lazy" width="1600" height="1600">
                {% else %}
                  <img class="smwc__overlay" src="https://placehold.co/1600x1600" alt="" loading="lazy" width="1600" height="1600">
                {% endif %}

                <button type="button" class="smwc__toggle" data-smwc-toggle aria-pressed="false">
                  <span class="smwc__pillDot" aria-hidden="true"></span>
                  <span class="smwc__toggleText">Verwandeln</span>
                </button>
              </div>
            </article>
          {% endif %}
        {% endfor %}
      </div>

      <button class="smwc__navbtn smwc__navbtn--next" type="button" data-smwc-next aria-label="Nächstes">
        <svg viewBox="0 0 24 24" fill="none" aria-hidden="true">
          <path d="M9.5 5.5L15.5 12l-6 6.5" stroke="currentColor" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    </div>

    <div class="smwc__desc" aria-label="Beschreibung">
      <p class="smwc__descHead">Beschreibung</p>
      <div class="smwc__descText" data-smwc-prompt></div>
    </div>
  </div>

  <script>
    (function(){
      var SECTION_ID = "{{ section.id }}";
      var root = document.getElementById("smwc-" + SECTION_ID);
      if(!root) return;

      var cards = Array.prototype.slice.call(root.querySelectorAll("[data-smwc-card]"));
      var prev = root.querySelector("[data-smwc-prev]");
      var next = root.querySelector("[data-smwc-next]");
      var promptEl = root.querySelector("[data-smwc-prompt]");

      if(!cards.length) return;

      var autoplay = {{ section.settings.autoplay | json }};
      var autoplayMs = ({{ section.settings.autoplay_seconds | default: 6 }} * 1000) || 6000;

      var active = 0;
      var timer = null;
      var onState = cards.map(function(){ return false; });
      var isInteracting = false;

      function mod(n,m){ return ((n % m) + m) % m; }
      function diff(i, a, n){
        var d = mod(i - a, n);
        if(d > n/2) d -= n;
        return d;
      }

      function setPrompt(idx){
        if(!promptEl) return;
        idx = Math.max(0, Math.min(cards.length - 1, idx));
        promptEl.textContent = cards[idx].getAttribute("data-prompt") || "";
      }

      function computeLayout(){
        var cs = parseFloat(getComputedStyle(root).getPropertyValue("--cardSize")) || 320;
        var w = root.getBoundingClientRect().width || 1200;

        // wider spread on desktop, safer on mobile
        var rx = Math.min(Math.max(360, (w * 0.42)), 720);
        var ry = Math.min(Math.max(88, cs * 0.28), 150);

        var navOffset = (cs / 2) + Math.min(86, Math.max(46, w * 0.045));
        root.style.setProperty("--navOffset", navOffset + "px");

        return { cs: cs, rx: rx, ry: ry };
      }

      function render(){
        var n = cards.length;
        var layout = computeLayout();

        var rx = layout.rx;
        var ry = layout.ry;

        // slightly smaller step when many cards
        var stepDeg = (n <= 6) ? 20 : (n <= 9 ? 16 : 13);
        var maxShow = (n <= 6) ? 4 : 5;

        for(var i=0;i<n;i++){
          var d = diff(i, active, n);
          var abs = Math.abs(d);
          var show = abs <= maxShow;

          var el = cards[i];
          el.style.pointerEvents = show ? "auto" : "none";

          var ang = (d * stepDeg) * (Math.PI / 180);
          var x = Math.sin(ang) * rx;
          var y = (1 - Math.cos(ang)) * ry;

          // make non-selected cards smaller to reduce crowding
          var s = (abs === 0) ? 1.08 : Math.max(0.62, 0.92 - abs * 0.10);

          // more visible but blurry
          var op = show ? Math.max(0.26, 1 - abs * 0.16) : 0;
          var blur = (abs === 0) ? 0 : Math.min(6.5, 2.2 + abs * 1.1);

          // keep vertical center aligned
          if(d === 0){
            el.classList.add("is-active");
            x = 0;
            y = 0;
            op = 1;
            blur = 0;
          } else {
            el.classList.remove("is-active");
          }

          el.style.opacity = String(op);
          el.style.filter = "blur(" + blur.toFixed(2) + "px)";
          el.style.zIndex = String(400 - abs * 30);

          el.style.transform =
            "translate(-50%, -50%) translate3d(" + x.toFixed(2) + "px," + y.toFixed(2) + "px,0) scale(" + s.toFixed(3) + ")";

          if(onState[i]) el.classList.add("is-on");
          else el.classList.remove("is-on");
        }

        setPrompt(active);
      }

      function go(dir){
        active = mod(active + dir, cards.length);
        render();
      }

      function stopAutoplay(){
        if(timer){ clearInterval(timer); timer = null; }
      }

      function startAutoplay(){
        if(!autoplay) return;
        stopAutoplay();
        timer = setInterval(function(){
          if(isInteracting) return;
          go(1);
        }, autoplayMs);
      }

      function bind(){
        if(prev) prev.addEventListener("click", function(){ stopAutoplay(); go(-1); startAutoplay(); });
        if(next) next.addEventListener("click", function(){ stopAutoplay(); go(1); startAutoplay(); });

        // swipe support
        var startX = 0;
        var dx = 0;

        root.addEventListener("pointerdown", function(e){
          isInteracting = true;
          stopAutoplay();
          startX = e.clientX;
          dx = 0;
        }, { passive: true });

        root.addEventListener("pointermove", function(e){
          if(!isInteracting) return;
          dx = e.clientX - startX;
        }, { passive: true });

        root.addEventListener("pointerup", function(){
          if(!isInteracting) return;
          isInteracting = false;
          if(Math.abs(dx) > 40){
            go(dx > 0 ? -1 : 1);
          }
          startAutoplay();
        }, { passive: true });

        // select card
        cards.forEach(function(card, idx){
          var frame = card.querySelector("[data-smwc-frame]");
          if(!frame) return;

          frame.addEventListener("click", function(e){
            var t = e.target;
            if(t && t.closest && t.closest("[data-smwc-toggle]")) return;
            active = idx;
            render();
          });

          frame.addEventListener("keydown", function(e){
            if(e.key === "Enter" || e.key === " "){
              e.preventDefault();
              active = idx;
              render();
            }
          });
        });

        // toggle overlay on active (or select first)
        root.querySelectorAll("[data-smwc-toggle]").forEach(function(btn){
          btn.addEventListener("click", function(e){
            e.preventDefault();
            e.stopPropagation();
            stopAutoplay();

            var card = btn.closest("[data-smwc-card]");
            if(!card) return;

            var idx = parseInt(card.getAttribute("data-index") || "0", 10);
            if(idx !== active){
              active = idx;
            }

            onState[active] = !onState[active];
            btn.setAttribute("aria-pressed", onState[active] ? "true" : "false");

            var t = btn.querySelector(".smwc__toggleText");
            if(t) t.textContent = onState[active] ? "Zurück" : "Verwandeln";

            render();
            startAutoplay();
          });
        });

        // keyboard
        root.addEventListener("keydown", function(e){
          if(e.key === "ArrowLeft"){ stopAutoplay(); go(-1); startAutoplay(); }
          if(e.key === "ArrowRight"){ stopAutoplay(); go(1); startAutoplay(); }
        });

        var ro = new ResizeObserver(function(){ render(); });
        ro.observe(root);
      }

      bind();
      render();
      startAutoplay();

      document.addEventListener("shopify:section:load", function(e){
        if(!e || !e.detail || !e.detail.sectionId) return;
        if(String(e.detail.sectionId) !== String(SECTION_ID)) return;
        stopAutoplay();
        render();
        startAutoplay();
      });
    })();
  </script>
</section>