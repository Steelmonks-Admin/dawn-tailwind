  #smwh-fromto-{{ section.id }} .smwhft__images{
    grid-template-columns: 1fr;
    gap: 14px;
    padding: 14px;
  }

  #smwh-fromto-{{ section.id }} .smwhft__center-shell{
    width: 220px;
  }

  #smwh-fromto-{{ section.id }} .smwhft__labels{
