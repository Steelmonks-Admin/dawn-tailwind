  #section-{{ section.id }}.sm-wh{
    padding: 48px 24px 84px;
  }

  #section-{{ section.id }} .sm-wh__trust-row{
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
  }

  #section-{{ section.id }} .sm-wh__badge-pill{
