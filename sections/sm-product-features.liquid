{% assign product_type = product.type %}

{% if product_type contains 'Anhänger'
  or product_type contains 'anhänger'
  or product_type contains 'Keychain'
  or product_type contains 'keychain'
%}
  {% assign type_of_product = 'keychain' %}
  {% render 'sm-product-features-keychain' %}
{% elsif product_type contains 'Anstecker' or product_type contains 'anstecker' %}
  {% assign type_of_product = 'pin' %}
  {% render 'sm-product-features-pin' %}
{% else %}
  {% assign type_of_product = 'sign' %}
  {% render 'sm-product-features-sign' %}
{% endif %}

{% style %}
  .pf__content-media-item img {
    {% if type_of_product == 'keychain' %}
      width: 60px;
      height: 60px;
    {% else %}
      width: 40px;
      height: 40px;
    {% endif %}
  }

  .pf__persistent-product {
    {% if type_of_product == 'sign' %}
      bottom: 0;
    {% elsif type_of_product == 'keychain' %}
      top: 0;
    {% endif %}
  }
{% endstyle %}
