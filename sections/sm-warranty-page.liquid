<main class='twcss-flex twcss-flex-col twcss-gap-12' style='padding: {{ section.settings.padding }}px;'>
  <!-- Primary Image Blocks Section -->
  <section class='twcss-grid twcss-gap-8 md:twcss-grid-cols-3 twcss-text-center twcss-px-8 twcss-py-12'>
    {% for block in section.blocks %}
      <div
        style='padding: 20px;'
        class='twcss-flex twcss-flex-col twcss-items-center twcss-gap-4'
      >
        {% if block.settings.icon != blank %}
          <img
            src='{{ block.settings.icon | image_url: width: 100 }}'
            alt='{{ block.settings.title | escape }}'
            width='100'
            height='100'
            class='twcss-mx-auto twcss-mb-2 twcss-object-contain'
            loading='lazy'
          >
        {% endif %}
        <p class='twcss-text-base'>{{ block.settings.description }}</p>
      </div>
    {% endfor %}
  </section>

  <!-- Primary Heading Section -->
  <div class='twcss-container twcss-px-8 twcss-py-12 twcss-bg-brandblue twcss-rounded-lg twcss-justify-center twcss-items-center'>
    <h1 class='twcss-text-center twcss-text-4xl twcss-font-bold'>{{ section.settings.heading }}</h1>
  </div>

  <!-- Primary Text Blocks Section -->
  <section class='twcss-grid twcss-gap-8 md:twcss-grid-cols-2 twcss-p-10'>
    <div class='twcss-prose'>
      {{ section.settings.content1 }}
    </div>
    <div class='twcss-prose'>
      {{ section.settings.content2 }}
    </div>
  </section>

  <!-- Secondary Image Blocks Section -->
  <section class='twcss-grid twcss-gap-8 md:twcss-grid-cols-3 twcss-text-center twcss-px-8 twcss-py-12'>
    {% for block in section.second_blocks %}
      <div
        style='padding: 20px;'
        class='twcss-flex twcss-flex-col twcss-items-center twcss-gap-4'
      >
        {% if block.settings.icon != blank %}
          <img
            src='{{ block.settings.icon | image_url: width: 100 }}'
            alt='{{ block.settings.title | escape }}'
            width='100'
            height='100'
            class='twcss-mx-auto twcss-mb-2 twcss-object-contain'
            loading='lazy'
          >
        {% endif %}
        <p class='twcss-text-base'>{{ block.settings.description }}</p>
      </div>
    {% endfor %}
  </section>

  <!-- Secondary Heading Section -->
  <h2 class='twcss-text-center twcss-text-lg'>{{ section.settings.second_heading }}</h2>

  <!-- Secondary Text Blocks Section -->
  <section class='twcss-grid twcss-gap-6 md:twcss-grid-cols-2 twcss-p-10'>
    <div class='twcss-prose twcss-text-center'>
      {{ section.settings.content3 }}
    </div>
    <div class='twcss-prose twcss-text-center'>
      {{ section.settings.content4 }}
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class='twcss-flex twcss-flex-col twcss-gap-4 twcss-p-10 twcss-rounded-lg'>
    <!-- Toggle Button -->
    <button
      type='button'
      class='twcss-w-full twcss-text-left twcss-bg-white twcss-p-4 twcss-rounded-lg twcss-shadow twcss-font-bold twcss-text-lg twcss-text-brandblack twcss-border twcss-border-gray-200'
      style='background-color: #fff !important;'
      onclick="document.getElementById('contact-form-container').classList.toggle('twcss-hidden')"
    >
      {{ section.settings.button_text }}
    </button>

    <!-- Collapsible Form Container -->
    <div
      id='contact-form-container'
      class='twcss-mt-4 twcss-bg-white twcss-rounded-lg twcss-shadow twcss-p-4 twcss-hidden'
    >
      <div class='klaviyo-form-QXQCMv'></div>
    </div>
  </section>
</main>

