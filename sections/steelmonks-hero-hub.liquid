{% comment %}
  Steelmonks Hero Hub ‚Äì Trust Row + per-card Sale Badges (text + color) + 3 CTAs
{% endcomment %}

<section 
  id="section-{{ section.id }}" 
  class="sm-hero-hub"
  style="padding-top: {{ section.settings.top_spacing | default: 24 }}px;"
>
  <div class="sm-hero-hub__inner">

    {%- comment -%} HERO AREA {%- endcomment -%}
    <div class="sm-hero-hub__hero sm-animate-hero">

      {% if section.settings.badge_text %}
        <div class="sm-hero-hub__badge">
          <span class="sm-hero-hub__badge-pill">
            {{ section.settings.badge_text }}
          </span>
        </div>
      {% endif %}

      {%- comment -%} TRUST ROW {%- endcomment -%}
      <div class="sm-hero-hub__trust-row">
        <div class="sm-hero-hub__trust-item">
          <div class="sm-hero-hub__trust-icon">üá©üá™</div>
          <div class="sm-hero-hub__trust-text">Schneller Versand.</div>
        </div>
        <div class="sm-hero-hub__trust-item">
          <div class="sm-hero-hub__trust-icon">üèÖ</div>
          <div class="sm-hero-hub__trust-text">√úber <strong>100.000+</strong> Bestellungen.</div>
        </div>
        <div class="sm-hero-hub__trust-item">
          <div class="sm-hero-hub__trust-icon">‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê</div>
          <div class="sm-hero-hub__trust-text"> <strong>10.000+</strong> Bewertungen.</div>
        </div>
      </div>

      <div class="sm-hero-hub__pixel-shell">
        <div class="sm-hero-hub__pixel-card sm-animate-pixel-float">

          <div class="sm-hero-hub__pixel-img-wrap">
            {% if section.settings.pixel_image %}
              {{ section.settings.pixel_image | image_url: width: 1600 | image_tag: loading: 'lazy', class: 'sm-hero-hub__pixel-img' }}
            {% else %}
              <div class="sm-hero-hub__pixel-placeholder">Pixel-Visual hochladen</div>
            {% endif %}
          </div>

          {% if section.settings.heading %}
            <div class="sm-hero-hub__speech">
              <div class="sm-hero-hub__speech-text">
                {{ section.settings.heading }}
              </div>
            </div>
          {% endif %}

          <div class="sm-hero-hub__pixel-kpi-wrap">
            <div class="sm-hero-hub__pixel-kpi-title">
              {{ section.settings.kpi_title }}
            </div>
            <div class="sm-hero-hub__pixel-kpi-sub">
              {{ section.settings.kpi_subtitle }}
            </div>
          </div>

        </div>
      </div>

     {%- comment -%} HERO CTA: Nur EIN Button oben {%- endcomment -%}
<div class="sm-hero-hub__ctas">
  {% if section.settings.primary_button_link %}
    <a href="{{ section.settings.primary_button_link }}" class="sm-hero-hub__btn sm-hero-hub__btn--primary">
      {{ section.settings.primary_button_label }}
    </a>
  {% endif %}
</div>
    </div>

    {%- comment -%} MAIN CATEGORIES ‚Äì Titel, Bild, Link, SALE BADGE pro Karte {%- endcomment -%}
    {% if section.blocks.size > 0 %}
      <div class="sm-hero-hub__categories-wrap sm-animate-categories">
        <div class="sm-hero-hub__categories">
          {% for block in section.blocks %}
            {% if block.type == 'main_category' %}
              <a 
                href="{{ block.settings.link | default: '#' }}"
                class="sm-hero-hub__category-card sm-animate-category-{{ forloop.index }}"
                {{ block.shopify_attributes }}
              >
                <div class="sm-hero-hub__category-label">
                  {{ block.settings.title }}
                </div>

                <div class="sm-hero-hub__category-media">
                  {% if block.settings.sale_badge_text != blank %}
                    {% assign badge_color = block.settings.sale_badge_color | default: '#DC2626' %}
                    <div class="sm-hero-hub__sale-badge" style="background: {{ badge_color }};">
                      {{ block.settings.sale_badge_text }}
                    </div>
                  {% endif %}

                  {% if block.settings.image %}
                    {{ block.settings.image | image_url: width: 700 | image_tag: loading: 'lazy', class: 'sm-hero-hub__category-img' }}
                  {% else %}
                    <div class="sm-hero-hub__category-placeholder">Bild w√§hlen</div>
                  {% endif %}
                </div>
              </a>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    {% endif %}

    {%- comment -%} COLLECTION BUTTONS UNTEN {%- endcomment -%}
    {% if section.settings.show_collection_row %}
      <div class="sm-hero-hub__collections sm-animate-collections">

        {% if section.settings.collection_fire_link %}
          <a href="{{ section.settings.collection_fire_link }}" class="sm-hero-hub__collection-btn sm-hero-hub__collection-btn--fire">
            <div class="sm-hero-hub__collection-icon">üî•</div>
            <div class="sm-hero-hub__collection-text">
              <span class="sm-hero-hub__collection-label">{{ section.settings.collection_fire_label }}</span>
              <span class="sm-hero-hub__collection-sub">{{ section.settings.collection_fire_sub }}</span>
            </div>
          </a>
        {% endif %}

        {% if section.settings.collection_craft_link %}
          <a href="{{ section.settings.collection_craft_link }}" class="sm-hero-hub__collection-btn sm-hero-hub__collection-btn--craft">
            <div class="sm-hero-hub__collection-icon">üõ†Ô∏è</div>
            <div class="sm-hero-hub__collection-text">
              <span class="sm-hero-hub__collection-label">{{ section.settings.collection_craft_label }}</span>
              <span class="sm-hero-hub__collection-sub">{{ section.settings.collection_craft_sub }}</span>
            </div>
          </a>
        {% endif %}

      </div>
    {% endif %}

  </div>
</section>

