{% comment %} Custom Accordion Section with 6 accordions, 2 visible at a time, hardcoded logic, no blocks {% endcomment %}

<div class="custom-accordion-section">
  <div class="custom-accordion-title">
    <h2>{{ section.settings.title }}</h2>
  </div>
  <div class="custom-accordion-wrapper">
    <button class="custom-accordion-arrow left" aria-label="Previous">&#x25C0;</button>
    <div class="custom-accordion-items">
      {% for i in (1..6) %}
        <div class="custom-accordion-item" data-index="{{ i }}">
          <div class="custom-accordion-heading">{{ section.settings["accordion_" | append: i | append: "_heading"] }}</div>
          <div class="custom-accordion-content">{{ section.settings["accordion_" | append: i | append: "_content"] }}</div>
        </div>
      {% endfor %}
    </div>
    <button class="custom-accordion-arrow right" aria-label="Next">&#x25B6;</button>
  </div>
</div>

