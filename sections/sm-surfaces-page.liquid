<main
  class='twcss-flex twcss-flex-col twcss-gap-12 twcss-items-center twcss-justify-center'
  style='padding: {{ section.settings.padding }}px;'
>
  <!-- Main Hero Image -->
  {% if section.settings.main_image != blank %}
    <img
      src='{{ section.settings.main_image | image_url: width: 800 }}'
      alt='{{ section.settings.main_image.alt | escape }}'
      width='800'
      height='auto'
      class='twcss-w-full twcss-h-auto twcss-object-contain'
      loading='lazy'
    >
  {% endif %}

  <!-- Title and Text -->
  <section class='twcss-flex twcss-flex-col twcss-gap-4 twcss-p-10 twcss-rounded-lg'>
    <h1 class='twcss-text-4xl twcss-font-bold twcss-text-brandblack twcss-text-center'>
      {{ section.settings.heading_1 }}
    </h1>
    <p class='twcss-text-base twcss-text-brandblack'>{{ section.settings.content_1 }}</p>
  </section>

  <!-- First Image grid -->
  <section class='twcss-grid twcss-grid-cols-2 md:twcss-grid-cols-4'>
    {% for block in section.blocks %}
      {% if block.type == 'first_grid_image' %}
        <img
          src='{{ block.settings.image | image_url: width: 340 }}'
          alt='{{ block.settings.image.alt | escape  }}'
          width='340'
          height='100'
          class='twcss-object-contain'
          loading='lazy'
        >
      {% endif %}
    {% endfor %}
  </section>

  <!-- Couloured Container and Text -->
  <section class='twcss-flex twcss-flex-col twcss-p-10 twcss-rounded-lg twcss-bg-brandblack twcss-text-brandwhite'>
    <div class='twcss-flex twcss-flex-col twcss-gap-4 twcss-text-brandwhite twcss-text-center'>
      <h2 class='twcss-text-4xl twcss-font-bold twcss-text-brandwhite'>{{ section.settings.heading_2 }}</h2>
      <p class='twcss-text-lg twcss-text-brandwhite'>{{ section.settings.content_2 }}</p>
    </div>
  </section>

  <!-- Text and Image Grid -->
  <section class='twcss-grid twcss-grid-cols-1 md:twcss-grid-cols-2 twcss-gap-4'>
    <div class='twcss-flex twcss-flex-col twcss-gap-4 twcss-text-brandblack'>
      <h2 class='twcss-text-2xl twcss-font-bold twcss-text-brandblack'>
        {{ section.settings.heading_3 }}
      </h2>
      <p class='twcss-text-base twcss-text-brandblack'>{{ section.settings.content_3 }}</p>
    </div>
    <div class='twcss-flex twcss-flex-col twcss-gap-4'>
      <img
        src='{{ section.settings.image_1 | image_url: width: 700 }}'
        alt='{{ section.settings.image_1.alt | escape }}'
        width='700'
        height='auto'
        class='twcss-object-contain'
        loading='lazy'
      >
    </div>
  </section>

  <!-- Secondary Image Grid -->
  <section class='twcss-grid twcss-grid-cols-2 twcss-gap-4 twcss-items-center twcss-justify-center'>
    {% for block in section.blocks %}
      {% if block.type == 'secondary_grid_image' %}
        <div class='twcss-flex twcss-flex-col twcss-gap-4'>
          <img
            src='{{ block.settings.image | image_url: width: 340 }}'
            alt='{{ block.settings.image.alt | escape  }}'
            width='340'
            height='100'
            class='twcss-object-contain'
            loading='lazy'
          >
          <p class='twcss-text-2xl twcss-text-brandblack twcss-text-center'>{{ block.settings.text }}</p>
        </div>
      {% endif %}
    {% endfor %}
  </section>

  <!-- Secondary Title and Text -->
  <section class='twcss-flex twcss-flex-col twcss-gap-4 twcss-p-10 twcss-rounded-lg'>
    <h2 class='twcss-text-2xl twcss-font-bold twcss-text-brandblack twcss-text-center'>
      {{ section.settings.heading_4 }}
    </h2>
    <p class='twcss-text-base twcss-text-brandblack'>{{ section.settings.content_4 }}</p>
  </section>
</main>

{% schema %}
{
  "name": "Surfaces Page",
  "settings": [
    {
      "type": "range",
      "id": "padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section Padding",
      "default": 40
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    },
    {
      "type": "text",
      "id": "heading_1",
      "label": "Heading (Section 1)"
    },
    {
      "type": "richtext",
      "id": "content_1",
      "label": "Content (Section 1)"
    },
    {
      "type": "text",
      "id": "heading_2",
      "label": "Heading (Section 2)"
    },
    {
      "type": "richtext",
      "id": "content_2",
      "label": "Content (Section 2)"
    },
    {
      "type": "text",
      "id": "heading_3",
      "label": "Heading (Section 3)"
    },
    {
      "type": "richtext",
      "id": "content_3",
      "label": "Content (Section 3)"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image (Section 3)"
    },
    {
      "type": "text",
      "id": "heading_4",
      "label": "Heading (Section 4)"
    },
    {
      "type": "richtext",
      "id": "content_4",
      "label": "Content (Section 4)"
    }
  ],
  "blocks": [
    {
      "type": "first_grid_image",
      "name": "First Grid Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    },
    {
      "type": "secondary_grid_image",
      "name": "Secondary Grid Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Image Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Surfaces Page"
    }
  ]
}
{% endschema %}
