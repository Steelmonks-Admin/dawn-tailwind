<section id="masonry-gallery-{{ section.id }}">
  <style>
    #masonry-gallery-{{ section.id }} .masonry-gallery__item{
      position: relative;
      overflow: hidden;
      border-radius: 0.5rem;
      transform: translateZ(0);
    }

    #masonry-gallery-{{ section.id }} .masonry-gallery__item img{
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 420ms cubic-bezier(0.2, 0.8, 0.2, 1), opacity 320ms ease;
      will-change: transform, opacity;
    }

    #masonry-gallery-{{ section.id }} .masonry-gallery__overlay{
      position: absolute;
      inset: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 14px;
      opacity: 0;
      transition: opacity 260ms ease;
      background: linear-gradient(180deg, rgba(0,0,0,0.10) 0%, rgba(0,0,0,0.65) 55%, rgba(0,0,0,0.78) 100%);
      pointer-events: none;
    }

    #masonry-gallery-{{ section.id }} .masonry-gallery__overlay-inner{
      width: 100%;
      max-height: 100%;
      overflow: auto;
      color: rgba(255,255,255,0.95);
      font-size: 12px;
      line-height: 1.35;
      letter-spacing: 0.2px;
      white-space: pre-wrap;
      word-break: break-word;
      opacity: 0;
      transform: translateY(8px);
      transition: opacity 320ms ease, transform 420ms cubic-bezier(0.2, 0.8, 0.2, 1);
      text-shadow: 0 2px 12px rgba(0,0,0,0.45);
    }

    #masonry-gallery-{{ section.id }} .masonry-gallery__item:hover img{
      opacity: 0.25;
      transform: scale(1.06);
    }

    #masonry-gallery-{{ section.id }} .masonry-gallery__item:hover .masonry-gallery__overlay{
      opacity: 1;
    }

    #masonry-gallery-{{ section.id }} .masonry-gallery__item:hover .masonry-gallery__overlay-inner{
      opacity: 1;
      transform: translateY(0);
    }

    #masonry-gallery-{{ section.id }} .masonry-gallery__item:focus-within img{
      opacity: 0.25;
      transform: scale(1.06);
    }

    #masonry-gallery-{{ section.id }} .masonry-gallery__item:focus-within .masonry-gallery__overlay{
      opacity: 1;
    }

    #masonry-gallery-{{ section.id }} .masonry-gallery__item:focus-within .masonry-gallery__overlay-inner{
      opacity: 1;
      transform: translateY(0);
    }

    @media (prefers-reduced-motion: reduce){
      #masonry-gallery-{{ section.id }} .masonry-gallery__item img,
      #masonry-gallery-{{ section.id }} .masonry-gallery__overlay,
      #masonry-gallery-{{ section.id }} .masonry-gallery__overlay-inner{
        transition: none;
      }
    }
  </style>

