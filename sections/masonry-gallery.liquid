  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Galerie"
    },

    { "type": "image_picker", "id": "image_1", "label": "Image 1" },
    { "type": "textarea", "id": "prompt_1", "label": "Prompt for Image 1", "default": "Placeholder prompt for Image 1. Paste the prompt used to generate this image." },

    { "type": "image_picker", "id": "image_2", "label": "Image 2" },
    { "type": "textarea", "id": "prompt_2", "label": "Prompt for Image 2", "default": "Placeholder prompt for Image 2. Paste the prompt used to generate this image." },

    { "type": "image_picker", "id": "image_3", "label": "Image 3" },
    { "type": "textarea", "id": "prompt_3", "label": "Prompt for Image 3", "default": "Placeholder prompt for Image 3. Paste the prompt used to generate this image." },

    { "type": "image_picker", "id": "image_4", "label": "Image 4 (Biggest)" },
    { "type": "textarea", "id": "prompt_4", "label": "Prompt for Image 4", "default": "Placeholder prompt for Image 4. Paste the prompt used to generate this image." },

    { "type": "image_picker", "id": "image_5", "label": "Image 5" },
    { "type": "textarea", "id": "prompt_5", "label": "Prompt for Image 5", "default": "Placeholder prompt for Image 5. Paste the prompt used to generate this image." },

    { "type": "image_picker", "id": "image_6", "label": "Image 6" },
    { "type": "textarea", "id": "prompt_6", "label": "Prompt for Image 6", "default": "Placeholder prompt for Image 6. Paste the prompt used to generate this image." },

    { "type": "image_picker", "id": "image_7", "label": "Image 7" },
    { "type": "textarea", "id": "prompt_7", "label": "Prompt for Image 7", "default": "Placeholder prompt for Image 7. Paste the prompt used to generate this image." },

    { "type": "image_picker", "id": "image_8", "label": "Image 8" },
    { "type": "textarea", "id": "prompt_8", "label": "Prompt for Image 8", "default": "Placeholder prompt for Image 8. Paste the prompt used to generate this image." },

    { "type": "image_picker", "id": "image_9", "label": "Image 9" },
    { "type": "textarea", "id": "prompt_9", "label": "Prompt for Image 9", "default": "Placeholder prompt for Image 9. Paste the prompt used to generate this image." },

    { "type": "image_picker", "id": "image_10", "label": "Image 10" },
    { "type": "textarea", "id": "prompt_10", "label": "Prompt for Image 10", "default": "Placeholder prompt for Image 10. Paste the prompt used to generate this image." }
  ],
  "presets": [
    { "name": "Masonry Gallery" }
  ]
}
{% endschema %}

{% assign sid = section.id %}

<section id="sm-masonry-gallery-{{ sid }}" class="smg" aria-label="Steelmonks Galerie">
  <style>
    /* Steelmonks-ish UI tokens (self-contained, no dependencies) */
    #sm-masonry-gallery-{{ sid }}{
      --smg-bg: rgba(10,12,14,0.02);
      --smg-card: rgba(255,255,255,0.72);
      --smg-card2: rgba(255,255,255,0.52);
      --smg-stroke: rgba(17,24,39,0.10);
      --smg-stroke-2: rgba(17,24,39,0.14);
      --smg-ink: rgba(17,24,39,0.92);
      --smg-muted: rgba(17,24,39,0.68);
      --smg-white: rgba(255,255,255,0.96);
      --smg-black: rgba(0,0,0,0.88);
      --smg-glow: rgba(255,255,255,0.16);
      --smg-shadow: 0 18px 40px rgba(0,0,0,0.08);
      --smg-shadow2: 0 12px 24px rgba(0,0,0,0.10);
      --smg-radius: 16px;
      --smg-radius-sm: 12px;
    }

    #sm-masonry-gallery-{{ sid }} .smg__wrap{
      max-width: 1100px;
      margin: 0 auto;
      padding: 18px 16px 34px;
    }

    #sm-masonry-gallery-{{ sid }} .smg__heading{
      text-align: center;
      margin: 6px 0 18px;
      font-weight: 650;
      letter-spacing: -0.02em;
      color: var(--smg-ink);
    }

    #sm-masonry-gallery-{{ sid }} .smg__grid{
      width: fit-content;
      margin: 0 auto;
      display: grid;
      gap: 10px;
      justify-content: center;
      align-items: center;
      grid-template-columns: 0.5fr 0.5fr 1fr 0.5fr 0.5fr 0.5fr;
    }

    @media (max-width: 1024px){
      #sm-masonry-gallery-{{ sid }} .smg__grid{
        grid-template-columns: 1fr 1fr 1fr;
        width: 100%;
      }
    }

    @media (max-width: 640px){
      #sm-masonry-gallery-{{ sid }} .smg__wrap{ padding: 14px 12px 28px; }
      #sm-masonry-gallery-{{ sid }} .smg__grid{
        grid-template-columns: 1fr 1fr;
        gap: 8px;
      }
    }

    #sm-masonry-gallery-{{ sid }} .smg__col{
      display: grid;
      gap: 10px;
    }

    #sm-masonry-gallery-{{ sid }} .smg__col--pt10{ padding-top: 40px; }
    #sm-masonry-gallery-{{ sid }} .smg__col--pt14{ padding-top: 56px; }
    #sm-masonry-gallery-{{ sid }} .smg__col--pt4{ padding-top: 16px; }

    @media (max-width: 1024px){
      #sm-masonry-gallery-{{ sid }} .smg__col--pt10,
      #sm-masonry-gallery-{{ sid }} .smg__col--pt14,
      #sm-masonry-gallery-{{ sid }} .smg__col--pt4{ padding-top: 0; }
    }

    /* Card */
    #sm-masonry-gallery-{{ sid }} .smg__item{
      position: relative;
      overflow: hidden;
      border-radius: var(--smg-radius-sm);
      background: linear-gradient(180deg, var(--smg-card) 0%, var(--smg-card2) 100%);
      border: 1px solid var(--smg-stroke);
      box-shadow: 0 1px 0 rgba(255,255,255,0.65) inset;
      transform: translateZ(0);
      isolation: isolate;
    }

    #sm-masonry-gallery-{{ sid }} .smg__item:focus-within{
      outline: none;
      box-shadow: 0 0 0 3px rgba(0,0,0,0.08), 0 1px 0 rgba(255,255,255,0.65) inset;
      border-color: var(--smg-stroke-2);
    }

    #sm-masonry-gallery-{{ sid }} .smg__img{
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
      transform: scale(1);
      transition: transform 520ms cubic-bezier(0.2,0.8,0.2,1), filter 320ms ease, opacity 320ms ease;
      will-change: transform, filter, opacity;
    }

    /* Hover feels like the sign-creator: crisp, premium, controlled */
    #sm-masonry-gallery-{{ sid }} .smg__item:hover .smg__img,
    #sm-masonry-gallery-{{ sid }} .smg__item:focus-within .smg__img{
      transform: scale(1.06);
      opacity: 0.20;
      filter: blur(1.5px) saturate(0.92);
    }

    /* Overlay */
    #sm-masonry-gallery-{{ sid }} .smg__overlay{
      position: absolute;
      inset: 0;
      opacity: 0;
      transition: opacity 260ms ease;
      pointer-events: none;
      background:
        radial-gradient(120% 90% at 50% 0%, rgba(255,255,255,0.14) 0%, rgba(255,255,255,0.06) 40%, rgba(0,0,0,0.62) 100%),
        linear-gradient(180deg, rgba(0,0,0,0.12) 0%, rgba(0,0,0,0.72) 70%, rgba(0,0,0,0.86) 100%);
    }

    #sm-masonry-gallery-{{ sid }} .smg__item:hover .smg__overlay,
    #sm-masonry-gallery-{{ sid }} .smg__item:focus-within .smg__overlay{
      opacity: 1;
    }

    /* Prompt container */
    #sm-masonry-gallery-{{ sid }} .smg__prompt{
      position: absolute;
      inset: 10px;
      display: grid;
      grid-template-rows: auto 1fr auto;
      gap: 10px;
      padding: 12px;
      border-radius: 14px;
      border: 1px solid rgba(255,255,255,0.16);
      background: rgba(0,0,0,0.18);
      box-shadow: 0 10px 30px rgba(0,0,0,0.20);
      opacity: 0;
      transform: translateY(10px);
      transition: opacity 320ms ease, transform 520ms cubic-bezier(0.2,0.8,0.2,1);
    }

    #sm-masonry-gallery-{{ sid }} .smg__item:hover .smg__prompt,
    #sm-masonry-gallery-{{ sid }} .smg__item:focus-within .smg__prompt{
      opacity: 1;
      transform: translateY(0);
    }

    #sm-masonry-gallery-{{ sid }} .smg__prompt-top{
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 10px;
    }

    #sm-masonry-gallery-{{ sid }} .smg__chip{
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 7px 10px;
      border-radius: 999px;
      background: rgba(255,255,255,0.10);
      border: 1px solid rgba(255,255,255,0.16);
      color: var(--smg-white);
      font-size: 12px;
      line-height: 1;
      letter-spacing: 0.2px;
      backdrop-filter: blur(6px);
      -webkit-backdrop-filter: blur(6px);
    }

    #sm-masonry-gallery-{{ sid }} .smg__dot{
      width: 8px;
      height: 8px;
      border-radius: 50%;
      background: rgba(255,255,255,0.78);
      box-shadow: 0 0 0 4px rgba(255,255,255,0.10);
      opacity: 0.85;
    }

    #sm-masonry-gallery-{{ sid }} .smg__hint{
      color: rgba(255,255,255,0.72);
      font-size: 12px;
      line-height: 1;
    }

    #sm-masonry-gallery-{{ sid }} .smg__prompt-text{
      color: rgba(255,255,255,0.92);
      font-size: 12px;
      line-height: 1.35;
      letter-spacing: 0.15px;
      white-space: pre-wrap;
      word-break: break-word;
      overflow: auto;
      padding-right: 4px;
      text-shadow: 0 2px 14px rgba(0,0,0,0.45);
    }

    #sm-masonry-gallery-{{ sid }} .smg__prompt-text::-webkit-scrollbar{
      width: 8px;
    }
    #sm-masonry-gallery-{{ sid }} .smg__prompt-text::-webkit-scrollbar-thumb{
      background: rgba(255,255,255,0.18);
      border-radius: 999px;
      border: 2px solid rgba(0,0,0,0);
      background-clip: padding-box;
    }

    #sm-masonry-gallery-{{ sid }} .smg__foot{
      display: flex;
      justify-content: flex-end;
      align-items: center;
      gap: 10px;
    }

    #sm-masonry-gallery-{{ sid }} .smg__kbd{
      color: rgba(255,255,255,0.70);
      font-size: 11px;
      letter-spacing: 0.2px;
      padding: 6px 8px;
      border-radius: 10px;
      background: rgba(255,255,255,0.08);
      border: 1px solid rgba(255,255,255,0.12);
    }

    @media (prefers-reduced-motion: reduce){
      #sm-masonry-gallery-{{ sid }} .smg__img,
      #sm-masonry-gallery-{{ sid }} .smg__overlay,
      #sm-masonry-gallery-{{ sid }} .smg__prompt{
        transition: none !important;
      }
    }
  </style>

  <div class="smg__wrap">
    <h2 class="smg__heading">
      {{ section.settings.heading }}
    </h2>

    <div class="smg__grid">
      {% comment %} Column 1 {% endcomment %}
      <div class="smg__col">
        {% render 'smg-item',
          sid: sid,
          img: section.settings.image_1,
          img_w: 140,
