    /* Steelmonks-ish feel: clean, premium, glassy, controlled motion */
    #masonry-gallery-{{ section.id }}{
      --smg-ink: rgba(17,24,39,0.92);
      --smg-muted: rgba(17,24,39,0.70);
      --smg-stroke: rgba(17,24,39,0.12);
      --smg-stroke-2: rgba(17,24,39,0.18);
      --smg-white: rgba(255,255,255,0.95);
      --smg-glass: rgba(255,255,255,0.10);
      --smg-glass-2: rgba(255,255,255,0.14);
      --smg-shadow: 0 18px 40px rgba(0,0,0,0.10);
      --smg-radius: 14px;
      --smg-radius-sm: 12px;
    }

    #masonry-gallery-{{ section.id }} .masonry-gallery__item{
      position: relative;
      overflow: hidden;
      border-radius: var(--smg-radius-sm);
      border: 1px solid var(--smg-stroke);
      box-shadow: 0 1px 0 rgba(255,255,255,0.65) inset;
      background: rgba(255,255,255,0.55);
      transform: translateZ(0);
      isolation: isolate;
    }

    #masonry-gallery-{{ section.id }} .masonry-gallery__item:focus-within{
      outline: none;
      border-color: var(--smg-stroke-2);
      box-shadow: 0 0 0 3px rgba(0,0,0,0.08), 0 1px 0 rgba(255,255,255,0.65) inset;
    }

    #masonry-gallery-{{ section.id }} .masonry-gallery__item img{
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 520ms cubic-bezier(0.2, 0.8, 0.2, 1), opacity 320ms ease, filter 320ms ease;
      will-change: transform, opacity, filter;
    }

    #masonry-gallery-{{ section.id }} .masonry-gallery__overlay{
      position: absolute;
      inset: 0;
      display: flex;
      align-items: flex-end;
      justify-content: center;
      padding: 12px;
      opacity: 0;
      transition: opacity 260ms ease;
      background:
        radial-gradient(120% 90% at 50% 0%, rgba(255,255,255,0.14) 0%, rgba(255,255,255,0.06) 40%, rgba(0,0,0,0.62) 100%),
        linear-gradient(180deg, rgba(0,0,0,0.10) 0%, rgba(0,0,0,0.70) 62%, rgba(0,0,0,0.86) 100%);
      pointer-events: none;
    }

    #masonry-gallery-{{ section.id }} .masonry-gallery__overlay-inner{
      width: 100%;
      max-height: 100%;
      overflow: auto;
      color: rgba(255,255,255,0.94);
      font-size: 12px;
      line-height: 1.35;
      letter-spacing: 0.15px;
      white-space: pre-wrap;
      word-break: break-word;

      /* glass card */
      border-radius: var(--smg-radius);
      border: 1px solid rgba(255,255,255,0.14);
      background: rgba(0,0,0,0.18);
      box-shadow: 0 10px 28px rgba(0,0,0,0.22);
      padding: 10px 10px 10px;

      opacity: 0;
      transform: translateY(10px);
      transition: opacity 320ms ease, transform 520ms cubic-bezier(0.2, 0.8, 0.2, 1);
      text-shadow: 0 2px 14px rgba(0,0,0,0.45);
      backdrop-filter: blur(6px);
      -webkit-backdrop-filter: blur(6px);
    }

    #masonry-gallery-{{ section.id }} .masonry-gallery__overlay-top{
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 10px;
      margin-bottom: 8px;
    }

    #masonry-gallery-{{ section.id }} .masonry-gallery__chip{
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 7px 10px;
      border-radius: 999px;
      background: var(--smg-glass);
      border: 1px solid rgba(255,255,255,0.16);
      color: var(--smg-white);
      font-size: 12px;
      line-height: 1;
      letter-spacing: 0.2px;
    }

    #masonry-gallery-{{ section.id }} .masonry-gallery__dot{
      width: 8px;
      height: 8px;
      border-radius: 50%;
      background: rgba(255,255,255,0.78);
      box-shadow: 0 0 0 4px rgba(255,255,255,0.10);
      opacity: 0.85;
      flex: 0 0 auto;
    }

    #masonry-gallery-{{ section.id }} .masonry-gallery__hint{
      color: rgba(255,255,255,0.74);
      font-size: 12px;
      line-height: 1;
      white-space: nowrap;
    }

    #masonry-gallery-{{ section.id }} .masonry-gallery__prompt{
      padding-right: 4px;
    }

    #masonry-gallery-{{ section.id }} .masonry-gallery__prompt::-webkit-scrollbar{
      width: 8px;
    }
    #masonry-gallery-{{ section.id }} .masonry-gallery__prompt::-webkit-scrollbar-thumb{
      background: rgba(255,255,255,0.18);
      border-radius: 999px;
      border: 2px solid rgba(0,0,0,0);
      background-clip: padding-box;
    }

    #masonry-gallery-{{ section.id }} .masonry-gallery__item:hover img,
    #masonry-gallery-{{ section.id }} .masonry-gallery__item:focus-within img{
      opacity: 0.20;
      transform: scale(1.06);
      filter: blur(1.5px) saturate(0.92);
    }

    #masonry-gallery-{{ section.id }} .masonry-gallery__item:hover .masonry-gallery__overlay,
    #masonry-gallery-{{ section.id }} .masonry-gallery__item:focus-within .masonry-gallery__overlay{
      opacity: 1;
    }

    #masonry-gallery-{{ section.id }} .masonry-gallery__item:hover .masonry-gallery__overlay-inner,
    #masonry-gallery-{{ section.id }} .masonry-gallery__item:focus-within .masonry-gallery__overlay-inner{
      opacity: 1;
      transform: translateY(0);
    }

    @media (prefers-reduced-motion: reduce){
      #masonry-gallery-{{ section.id }} .masonry-gallery__item img,
      #masonry-gallery-{{ section.id }} .masonry-gallery__overlay,
      #masonry-gallery-{{ section.id }} .masonry-gallery__overlay-inner{
        transition: none !important;
      }
    }
  </style>

