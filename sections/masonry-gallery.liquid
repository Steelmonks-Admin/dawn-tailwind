{% endschema %}

<section
  id='masonry-gallery'
>
  {% comment %} * Heading {% endcomment %}
  <h2 class='twcss-text-center twcss-pt-5'>
    {{ section.settings.heading }}
  </h2>

  {% comment %} * Gallery Grid {% endcomment %}
  <div class='twcss-w-fit twcss-grid twcss-grid-cols-[0.5fr_0.5fr_1fr_0.5fr_0.5fr_0.5fr] twcss-gap-2 twcss-justify-center twcss-items-center twcss-mx-auto twcss-py-10'>
    {% comment %} ? Column 1 {% endcomment %}
    <div class='twcss-grid twcss-gap-2'>
      <picture class='hover:twcss-scale-105 twcss-transition-all twcss-duration-300'>
        {% if section.settings.image_1 != blank %}
          <img
            src='{{ section.settings.image_1 | image_url: width: 140, height: 140 }}'
            alt='{{ section.settings.image_1.alt | escape }}'
            width='140'
            height='140'
            class='twcss-rounded-lg'
          >
        {% else %}
          <img
            src='https://placehold.co/140'
