        %}
        {% render 'smg-item',
          sid: sid,
          img: section.settings.image_9,
          img_w: 140,
          img_h: 140,
          prompt: section.settings.prompt_9,
          idx: 9
        %}
      </div>

      {% comment %} Column 6 {% endcomment %}
      <div class="smg__col">
        {% render 'smg-item',
          sid: sid,
          img: section.settings.image_10,
