{% raw %}
{% comment %}
  Props:
  - sid: section.id
  - img: image object
  - img_w / img_h
  - prompt: string
  - idx: number
{% endcomment %}

<div class="smg__item" tabindex="0" role="group" aria-label="Galerie Bild {{ idx }}">
  {% if img != blank %}
    <img
      class="smg__img"
      src="{{ img | image_url: width: img_w, height: img_h }}"
      alt="{{ img.alt | escape }}"
      width="{{ img_w }}"
      height="{{ img_h }}"
      loading="lazy"
    >
  {% else %}
    <img
      class="smg__img"
      src="https://placehold.co/{{ img_w }}x{{ img_h }}"
      alt="Placeholder Image"
      width="{{ img_w }}"
      height="{{ img_h }}"
      loading="lazy"
    >
  {% endif %}

  <div class="smg__overlay" aria-hidden="true"></div>

  <div class="smg__prompt" aria-hidden="true">
    <div class="smg__prompt-top">
      <div class="smg__chip">
        <span class="smg__dot" aria-hidden="true"></span>
        Prompt
      </div>
      <div class="smg__hint">Hover f√ºr Details</div>
    </div>

    <div class="smg__prompt-text">
      {{ prompt | default: "Placeholder prompt. Paste the prompt used to generate this image." | escape }}
    </div>

    <div class="smg__foot">
      <div class="smg__kbd">Esc</div>
    </div>
  </div>
</div>
{% endraw %}