{% schema %}
{
  "name": "Steelmonks Items Grid",
  "settings": [],
  "blocks": [
    {
      "type": "items_row",
      "name": "Items Row",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "image_picker",
          "id": "item1",
          "label": "Item 1"
        },
        {
          "type": "url",
          "id": "item1_link",
          "label": "Item 1 Link"
        },
        {
          "type": "image_picker",
          "id": "item2",
          "label": "Item 2"
        },
        {
          "type": "url",
          "id": "item2_link",
          "label": "Item 2 Link"
        },
        {
          "type": "image_picker",
          "id": "item3",
          "label": "Item 3"
        },
        {
          "type": "url",
          "id": "item3_link",
          "label": "Item 3 Link"
        },
        {
          "type": "image_picker",
          "id": "item4",
          "label": "Item 4"
        },
        {
          "type": "url",
          "id": "item4_link",
          "label": "Item 4 Link"
        },
        {
          "type": "text",
          "id": "cta_text",
          "label": "CTA Text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "cta_link",
          "label": "CTA Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Steelmonks Items Grid"
    }
  ]
}
{% endschema %}

{% for block in section.blocks %}
  {% case block.type %}
    {% when 'items_row' %}
      {% render 'items_row', block: block %}
  {% endcase %}
{% endfor %}
