{% comment %}
  Werkstatt Steps
  3 square visuals + floating arrows + on-brand glass cards
  No heavy overlays, captions live below as freestanding pills
  Mobile-first, pixel-perfect, subtle animations
{% endcomment %}

{% schema %}
{
  "name": "Werkstatt Steps",
  "tag": "section",
  "settings": [
    {
      "type": "range",
      "id": "top_spacing",
      "label": "Abstand oben",
      "default": 34,
      "min": 0,
      "max": 160,
      "step": 2
    },
    {
      "type": "range",
      "id": "bottom_spacing",
      "label": "Abstand unten",
      "default": 46,
      "min": 0,
      "max": 200,
      "step": 2
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "So entsteht dein Schild"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Upload → Entwurf → Fertiges Schild"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "textarea",
      "id": "caption_1",
      "label": "Caption 1",
      "default": "Motiv hochladen"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    },
    {
      "type": "textarea",
      "id": "caption_2",
      "label": "Caption 2",
      "default": "Entwurf generieren"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Image 3"
    },
    {
      "type": "textarea",
      "id": "caption_3",
      "label": "Caption 3",
      "default": "Fertiges Schild"
    },
    {
      "type": "checkbox",
      "id": "show_numbers",
      "label": "Show step numbers",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_animations",
      "label": "Enable animations",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Werkstatt Steps"
    }
  ]
}
{% endschema %}

<section
  id="sm-steps-{{ section.id }}"
  class="smws"
  data-anim="{{ section.settings.enable_animations | json }}"
  style="padding-top: {{ section.settings.top_spacing | default: 34 }}px; padding-bottom: {{ section.settings.bottom_spacing | default: 46 }}px;"
  aria-label="Werkstatt Steps"
>
  <style>
    #sm-steps-{{ section.id }}{
      --ink: rgba(9,10,12,0.92);
      --muted: rgba(9,10,12,0.68);
      --stroke: rgba(9,10,12,0.10);
      --shadow: 0 34px 110px rgba(15,23,42,0.14);
      --shadow2: 0 16px 34px rgba(15,23,42,0.10);
      --radius: 32px;
      --radius-sm: 20px;
      --gap: 22px;
      --gap-lg: 30px;
    }

    /* section */
    #sm-steps-{{ section.id }}{
      background: transparent;
      color: var(--ink);
    }

    #sm-steps-{{ section.id }} .smws__wrap{
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 16px;
    }

    #sm-steps-{{ section.id }} .smws__head{
      text-align: center;
      margin-bottom: 18px;
    }

    #sm-steps-{{ section.id }} .smws__title{
      margin: 0;
      font-weight: 900;
      letter-spacing: -0.02em;
      font-size: clamp(20px, 2.6vw, 34px);
      line-height: 1.12;
      color: var(--ink);
    }

    #sm-steps-{{ section.id }} .smws__sub{
      margin: 10px 0 0;
      color: var(--muted);
      font-size: 13px;
      letter-spacing: 0.2px;
    }

    /* floating shell, no clipped background */
    #sm-steps-{{ section.id }} .smws__shell{
      position: relative;
      border-radius: var(--radius);
      border: 1px solid rgba(9,10,12,0.08);
      background: rgba(255,255,255,0.36);
      box-shadow: 0 1px 0 rgba(255,255,255,0.55) inset, var(--shadow);
      overflow: visible;
      padding: 18px;
      isolation: isolate;
    }

    #sm-steps-{{ section.id }} .smws__shell:before{
      content: "";
      position: absolute;
      inset: -80px;
      border-radius: calc(var(--radius) + 80px);
      background:
        radial-gradient(closest-side at 25% 20%, rgba(255,152,0,0.12), rgba(255,255,255,0) 62%),
        radial-gradient(closest-side at 75% 18%, rgba(0,68,204,0.10), rgba(255,255,255,0) 64%);
      pointer-events: none;
      z-index: 0;
      filter: blur(2px);
      opacity: 0.9;
    }

    /* row */
    #sm-steps-{{ section.id }} .smws__row{
      position: relative;
      z-index: 1;
      display: grid;
      grid-template-columns: 1fr auto 1fr auto 1fr;
      align-items: start;
      gap: var(--gap);
    }

    /* on mobile we stack cards, arrows become separators */
    @media (max-width: 900px){
      #sm-steps-{{ section.id }} .smws__shell{
        padding: 16px;
      }
      #sm-steps-{{ section.id }} .smws__row{
        grid-template-columns: 1fr;
        gap: 14px;
      }
    }

    /* card */
    #sm-steps-{{ section.id }} .smws__card{
      display: grid;
      gap: 12px;
      align-content: start;
      transform: translateZ(0);
    }

    #sm-steps-{{ section.id }} .smws__media{
      position: relative;
      border-radius: 30px;
      aspect-ratio: 1 / 1; /* always square */
      overflow: hidden;
      background: rgba(9,10,12,0.05);
      border: 1px solid rgba(9,10,12,0.08);
      box-shadow: var(--shadow2);
      transform: translateZ(0);
      will-change: transform;
    }

    #sm-steps-{{ section.id }} .smws__img{
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      transform: scale(1);
      transition: transform 560ms cubic-bezier(0.2,0.8,0.2,1), filter 320ms ease;
      will-change: transform, filter;
    }

    /* subtle hover, no white background changes */
    #sm-steps-{{ section.id }} .smws__media:hover .smws__img,
    #sm-steps-{{ section.id }} .smws__media:focus-within .smws__img{
      transform: scale(1.04);
      filter: saturate(0.96);
    }

    /* caption pill */
    #sm-steps-{{ section.id }} .smws__cap{
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      border-radius: 999px;
      border: 1px solid rgba(9,10,12,0.10);
      background: rgba(255,255,255,0.62);
      box-shadow: var(--shadow2);
      padding: 10px 12px;
      text-align: center;
      color: rgba(9,10,12,0.82);
      font-size: 13px;
      font-weight: 750;
      letter-spacing: 0.1px;
      line-height: 1.25;
      min-height: 44px;
    }

    #sm-steps-{{ section.id }} .smws__num{
      flex: 0 0 auto;
      width: 26px;
      height: 26px;
      border-radius: 999px;
      display: grid;
      place-items: center;
      background: rgba(9,10,12,0.08);
      border: 1px solid rgba(9,10,12,0.12);
      font-size: 12px;
      font-weight: 900;
      color: rgba(9,10,12,0.86);
    }

    /* arrows */
    #sm-steps-{{ section.id }} .smws__arrow{
      display: grid;
      place-items: center;
      padding-top: 12px;
    }

    #sm-steps-{{ section.id }} .smws__arrowbtn{
      width: 60px;
      height: 60px;
      border-radius: 18px;
      border: 1px solid rgba(9,10,12,0.10);
      background: rgba(255,255,255,0.48);
      box-shadow: 0 1px 0 rgba(255,255,255,0.55) inset, var(--shadow2);
      display: grid;
      place-items: center;
      transform: translateZ(0);
      will-change: transform;
    }

    #sm-steps-{{ section.id }} .smws__arrowico{
      width: 22px;
      height: 22px;
      opacity: 0.9;
      transform: translateX(0);
      transition: transform 560ms cubic-bezier(0.2,0.8,0.2,1), opacity 260ms ease;
    }

    /* subtle pulse */
    @keyframes smwsPulse{
      0%{ transform: translateY(0); }
      50%{ transform: translateY(-4px); }
      100%{ transform: translateY(0); }
    }

    @keyframes smwsArrowNudge{
      0%{ transform: translateX(0); }
      50%{ transform: translateX(4px); }
      100%{ transform: translateX(0); }
    }

    #sm-steps-{{ section.id }}[data-anim="true"] .smws__shell{
      animation: smwsPulse 7.5s ease-in-out infinite;
    }

    #sm-steps-{{ section.id }}[data-anim="true"] .smws__row:hover .smws__arrowico{
      animation: smwsArrowNudge 1.1s ease-in-out infinite;
      opacity: 1;
    }

    #sm-steps-{{ section.id }}[data-anim="true"] .smws__media{
      transition: transform 220ms ease;
    }

    #sm-steps-{{ section.id }}[data-anim="true"] .smws__media:hover{
      transform: translateY(-2px);
    }

    /* mobile arrows as separators */
    @media (max-width: 900px){
      #sm-steps-{{ section.id }} .smws__arrow{
        padding-top: 0;
      }
      #sm-steps-{{ section.id }} .smws__arrowbtn{
        width: 100%;
        height: 44px;
        border-radius: 16px;
      }
      #sm-steps-{{ section.id }} .smws__arrowico{
        transform: rotate(90deg);
      }
      #sm-steps-{{ section.id }}[data-anim="true"] .smws__row:hover .smws__arrowico{
        animation: none;
        transform: rotate(90deg);
      }
    }

    /* bigger spacing on wide screens */
    @media (min-width: 1000px){
      #sm-steps-{{ section.id }}{
        --gap: var(--gap-lg);
      }
    }

    /* reduced motion */
    @media (prefers-reduced-motion: reduce){
      #sm-steps-{{ section.id }} .smws__img,
      #sm-steps-{{ section.id }} .smws__arrowico,
      #sm-steps-{{ section.id }} .smws__shell,
      #sm-steps-{{ section.id }} .smws__media{
        animation: none !important;
        transition: none !important;
      }
    }
  </style>

  <div class="smws__wrap">
    <div class="smws__head">
      <h2 class="smws__title">{{ section.settings.heading }}</h2>
      <p class="smws__sub">{{ section.settings.subheading }}</p>
    </div>

    <div class="smws__shell">
      <div class="smws__row">

        {% comment %} Step 1 {% endcomment %}
        <div class="smws__card">
          <div class="smws__media" tabindex="0">
            {% if section.settings.image_1 != blank %}
              <img
                class="smws__img"
                src="{{ section.settings.image_1 | image_url: width: 1200 }}"
                alt="{{ section.settings.image_1.alt | escape }}"
                loading="lazy"
                width="1200"
                height="1200"
              >
            {% else %}
              <img
                class="smws__img"
                src="https://placehold.co/1200x1200"
                alt="Placeholder"
                loading="lazy"
                width="1200"
                height="1200"
              >
            {% endif %}
          </div>

          <div class="smws__cap">
            {% if section.settings.show_numbers %}
              <span class="smws__num" aria-hidden="true">1</span>
            {% endif %}
            <span>{{ section.settings.caption_1 | escape }}</span>
          </div>
        </div>

        {% comment %} Arrow 1 {% endcomment %}
        <div class="smws__arrow" aria-hidden="true">
          <div class="smws__arrowbtn">
            <svg class="smws__arrowico" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path d="M9 6L15 12L9 18" stroke="rgba(9,10,12,0.85)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
        </div>

        {% comment %} Step 2 {% endcomment %}
        <div class="smws__card">
          <div class="smws__media" tabindex="0">
            {% if section.settings.image_2 != blank %}
              <img
                class="smws__img"
                src="{{ section.settings.image_2 | image_url: width: 1200 }}"
                alt="{{ section.settings.image_2.alt | escape }}"
                loading="lazy"
                width="1200"
                height="1200"
              >
            {% else %}
              <img
                class="smws__img"
                src="https://placehold.co/1200x1200"
                alt="Placeholder"
                loading="lazy"
                width="1200"
                height="1200"
              >
            {% endif %}
          </div>

          <div class="smws__cap">
            {% if section.settings.show_numbers %}
              <span class="smws__num" aria-hidden="true">2</span>
            {% endif %}
            <span>{{ section.settings.caption_2 | escape }}</span>
          </div>
        </div>

        {% comment %} Arrow 2 {% endcomment %}
        <div class="smws__arrow" aria-hidden="true">
          <div class="smws__arrowbtn">
            <svg class="smws__arrowico" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path d="M9 6L15 12L9 18" stroke="rgba(9,10,12,0.85)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
        </div>

        {% comment %} Step 3 {% endcomment %}
        <div class="smws__card">
          <div class="smws__media" tabindex="0">
            {% if section.settings.image_3 != blank %}
              <img
                class="smws__img"
                src="{{ section.settings.image_3 | image_url: width: 1200 }}"
                alt="{{ section.settings.image_3.alt | escape }}"
                loading="lazy"
                width="1200"
                height="1200"
              >
            {% else %}
              <img
                class="smws__img"
                src="https://placehold.co/1200x1200"
                alt="Placeholder"
                loading="lazy"
                width="1200"
                height="1200"
              >
            {% endif %}
          </div>

          <div class="smws__cap">
            {% if section.settings.show_numbers %}
              <span class="smws__num" aria-hidden="true">3</span>
            {% endif %}
            <span>{{ section.settings.caption_3 | escape }}</span>
          </div>
        </div>

      </div>
    </div>
  </div>

  <script>
    (function(){
      var root = document.getElementById('sm-steps-{{ section.id }}');
      if(!root) return;

      // Keep attribute stable for CSS selectors
      root.setAttribute('data-anim', {{ section.settings.enable_animations | json }} ? 'true' : 'false');
    })();
  </script>
</section>