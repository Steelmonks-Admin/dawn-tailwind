{% comment %}
  Werkstatt Steps (polished v2)
  - No big background card, only freestanding step cards
  - Square images on all screens
  - Centered, frameless arrows (no box)
  - On-brand subtle float + arrow nudge animations
  UPDATE:
  - Mobile now stays as ONE row (3 cards + arrows), no stacking
{% endcomment %}

{% schema %}
{
  "name": "Werkstatt Steps",
  "tag": "section",
  "settings": [
    {
      "type": "range",
      "id": "top_spacing",
      "label": "Abstand oben",
      "default": 28,
      "min": 0,
      "max": 160,
      "step": 2
    },
    {
      "type": "range",
      "id": "bottom_spacing",
      "label": "Abstand unten",
      "default": 40,
      "min": 0,
      "max": 200,
      "step": 2
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "So entsteht dein Schild"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Upload → Entwurf → Fertiges Schild"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "textarea",
      "id": "caption_1",
      "label": "Caption 1",
      "default": "Motiv hochladen"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    },
    {
      "type": "textarea",
      "id": "caption_2",
      "label": "Caption 2",
      "default": "Entwurf generieren"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Image 3"
    },
    {
      "type": "textarea",
      "id": "caption_3",
      "label": "Caption 3",
      "default": "Fertiges Schild"
    },
    {
      "type": "checkbox",
      "id": "show_numbers",
      "label": "Show step numbers",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_animations",
      "label": "Enable animations",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Werkstatt Steps"
    }
  ]
}
{% endschema %}

<section
  id="sm-steps-{{ section.id }}"
  class="smws"
  data-anim="{{ section.settings.enable_animations | json }}"
  style="padding-top: {{ section.settings.top_spacing | default: 28 }}px; padding-bottom: {{ section.settings.bottom_spacing | default: 40 }}px;"
  aria-label="Werkstatt Steps"
>
  <style>
    #sm-steps-{{ section.id }}{
      --ink: rgba(9,10,12,0.92);
      --muted: rgba(9,10,12,0.68);
      --stroke: rgba(9,10,12,0.10);
      --shadow: 0 34px 110px rgba(15,23,42,0.14);
      --shadow2: 0 16px 34px rgba(15,23,42,0.10);
      --radius: 30px;

      --gap: 28px;
      --arrow-gap: 16px;
    }

    #sm-steps-{{ section.id }}{
      background: transparent;
      color: var(--ink);
    }

    #sm-steps-{{ section.id }} .smws__wrap{
      max-width: 1240px;
      margin: 0 auto;
      padding: 0 16px;
    }

    #sm-steps-{{ section.id }} .smws__head{
      text-align: center;
      margin-bottom: 18px;
    }

    #sm-steps-{{ section.id }} .smws__title{
      margin: 0;
      font-weight: 900;
      letter-spacing: -0.02em;
      font-size: clamp(20px, 2.6vw, 34px);
      line-height: 1.12;
      color: var(--ink);
    }

    #sm-steps-{{ section.id }} .smws__sub{
      margin: 10px 0 0;
      color: var(--muted);
      font-size: 13px;
      letter-spacing: 0.2px;
    }

    /* Row layout (desktop + mobile) */
    #sm-steps-{{ section.id }} .smws__row{
      display: grid;
      grid-template-columns: 1fr auto 1fr auto 1fr;
      align-items: center;
      gap: var(--gap);
    }

    /* Mobile: STILL one row, just tighter */
    @media (max-width: 900px){
      #sm-steps-{{ section.id }}{
        --gap: 10px;
        --arrow-gap: 6px;
        --radius: 22px;
      }

      #sm-steps-{{ section.id }} .smws__wrap{
        padding: 0 12px;
      }

      #sm-steps-{{ section.id }} .smws__row{
        grid-template-columns: 1fr auto 1fr auto 1fr;
        gap: var(--gap);
      }
    }

    /* Step card */
    #sm-steps-{{ section.id }} .smws__card{
      display: grid;
      gap: 12px;
      align-content: start;
      transform: translateZ(0);
      will-change: transform;
      min-width: 0;
    }

    #sm-steps-{{ section.id }} .smws__media{
      position: relative;
      border-radius: var(--radius);
      aspect-ratio: 1 / 1;
      overflow: hidden;
      background: rgba(9,10,12,0.05);
      border: 1px solid rgba(9,10,12,0.08);
      box-shadow: var(--shadow2);
      transform: translateZ(0);
    }

    #sm-steps-{{ section.id }} .smws__img{
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      transform: scale(1);
      transition: transform 560ms cubic-bezier(0.2,0.8,0.2,1), filter 320ms ease;
      will-change: transform, filter;
    }

    #sm-steps-{{ section.id }} .smws__media:hover .smws__img,
    #sm-steps-{{ section.id }} .smws__media:focus-within .smws__img{
      transform: scale(1.04);
      filter: saturate(0.96);
    }

    /* caption pill */
    #sm-steps-{{ section.id }} .smws__cap{
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      width: 100%;
      border-radius: 999px;
      border: 1px solid rgba(9,10,12,0.10);
      background: rgba(255,255,255,0.62);
      box-shadow: var(--shadow2);
      padding: 11px 14px;
      text-align: center;
      color: rgba(9,10,12,0.82);
      font-size: 13px;
      font-weight: 800;
      letter-spacing: 0.1px;
      line-height: 1.25;
      min-height: 46px;
      min-width: 0;
    }

    #sm-steps-{{ section.id }} .smws__cap span:last-child{
      min-width: 0;
      overflow-wrap: anywhere;
      word-break: break-word;
    }

    #sm-steps-{{ section.id }} .smws__num{
      flex: 0 0 auto;
      width: 26px;
      height: 26px;
      border-radius: 999px;
      display: grid;
      place-items: center;
      background: rgba(9,10,12,0.08);
      border: 1px solid rgba(9,10,12,0.12);
      font-size: 12px;
      font-weight: 900;
      color: rgba(9,10,12,0.86);
    }

    @media (max-width: 900px){
      #sm-steps-{{ section.id }} .smws__cap{
        padding: 9px 10px;
        font-size: 11.5px;
        min-height: 40px;
        gap: 8px;
      }
      #sm-steps-{{ section.id }} .smws__num{
        width: 22px;
        height: 22px;
        font-size: 11px;
      }
    }

    /* Frameless arrows */
    #sm-steps-{{ section.id }} .smws__arrow{
      display: grid;
      place-items: center;
      height: 100%;
      padding: 0 var(--arrow-gap);
      transform: translateZ(0);
    }

    #sm-steps-{{ section.id }} .smws__arrow svg{
      width: 34px;
      height: 34px;
      opacity: 0.9;
      transform: translateX(0);
      transition: transform 520ms cubic-bezier(0.2,0.8,0.2,1), opacity 220ms ease;
      filter: drop-shadow(0 14px 26px rgba(15,23,42,0.12));
    }

    /* Mobile: keep arrows pointing right, just smaller */
    @media (max-width: 900px){
      #sm-steps-{{ section.id }} .smws__arrow{
        padding: 0;
      }
      #sm-steps-{{ section.id }} .smws__arrow svg{
        width: 22px;
        height: 22px;
        transform: none;
        filter: drop-shadow(0 10px 18px rgba(15,23,42,0.10));
      }
    }

    /* Animations */
    @keyframes smwsFloat{
      0%{ transform: translateY(0); }
      50%{ transform: translateY(-6px); }
      100%{ transform: translateY(0); }
    }

    @keyframes smwsArrowNudge{
      0%{ transform: translateX(0); }
      50%{ transform: translateX(6px); }
      100%{ transform: translateX(0); }
    }

    #sm-steps-{{ section.id }}[data-anim="true"] .smws__card{
      animation: smwsFloat 8s ease-in-out infinite;
    }
    #sm-steps-{{ section.id }}[data-anim="true"] .smws__card:nth-child(1){ animation-delay: 0.00s; }
    #sm-steps-{{ section.id }}[data-anim="true"] .smws__card:nth-child(3){ animation-delay: 0.30s; }
    #sm-steps-{{ section.id }}[data-anim="true"] .smws__card:nth-child(5){ animation-delay: 0.60s; }

    #sm-steps-{{ section.id }}[data-anim="true"] .smws__row:hover .smws__arrow svg{
      animation: smwsArrowNudge 1.1s ease-in-out infinite;
      opacity: 1;
    }

    /* disable float on mobile for pixel-perfect stability */
    @media (max-width: 900px){
      #sm-steps-{{ section.id }}[data-anim="true"] .smws__card{
        animation: none;
      }
      #sm-steps-{{ section.id }}[data-anim="true"] .smws__row:hover .smws__arrow svg{
        animation: none;
      }
    }

    /* Reduced motion */
    @media (prefers-reduced-motion: reduce){
      #sm-steps-{{ section.id }} .smws__img,
      #sm-steps-{{ section.id }} .smws__arrow svg,
      #sm-steps-{{ section.id }} .smws__card{
        animation: none !important;
        transition: none !important;
      }
    }
  </style>

  <div class="smws__wrap">
    <div class="smws__head">
      <h2 class="smws__title">{{ section.settings.heading }}</h2>
      <p class="smws__sub">{{ section.settings.subheading }}</p>
    </div>

    <div class="smws__row">
      {% comment %} Step 1 {% endcomment %}
      <div class="smws__card">
        <div class="smws__media" tabindex="0">
          {% if section.settings.image_1 != blank %}
            <img
              class="smws__img"
              src="{{ section.settings.image_1 | image_url: width: 1400 }}"
              alt="{{ section.settings.image_1.alt | escape }}"
              loading="lazy"
              width="1400"
              height="1400"
            >
          {% else %}
            <img
              class="smws__img"
              src="https://placehold.co/1400x1400"
              alt="Placeholder"
              loading="lazy"
              width="1400"
              height="1400"
            >
          {% endif %}
        </div>

        <div class="smws__cap">
          {% if section.settings.show_numbers %}
            <span class="smws__num" aria-hidden="true">1</span>
          {% endif %}
          <span>{{ section.settings.caption_1 | escape }}</span>
        </div>
      </div>

      {% comment %} Arrow 1 {% endcomment %}
      <div class="smws__arrow" aria-hidden="true">
        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M9 6L15 12L9 18" stroke="rgba(9,10,12,0.78)" stroke-width="2.4" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </div>

      {% comment %} Step 2 {% endcomment %}
      <div class="smws__card">
        <div class="smws__media" tabindex="0">
          {% if section.settings.image_2 != blank %}
            <img
              class="smws__img"
              src="{{ section.settings.image_2 | image_url: width: 1400 }}"
              alt="{{ section.settings.image_2.alt | escape }}"
              loading="lazy"
              width="1400"
              height="1400"
            >
          {% else %}
            <img
              class="smws__img"
              src="https://placehold.co/1400x1400"
              alt="Placeholder"
              loading="lazy"
              width="1400"
              height="1400"
            >
          {% endif %}
        </div>

        <div class="smws__cap">
          {% if section.settings.show_numbers %}
            <span class="smws__num" aria-hidden="true">2</span>
          {% endif %}
          <span>{{ section.settings.caption_2 | escape }}</span>
        </div>
      </div>

      {% comment %} Arrow 2 {% endcomment %}
      <div class="smws__arrow" aria-hidden="true">
        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M9 6L15 12L9 18" stroke="rgba(9,10,12,0.78)" stroke-width="2.4" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </div>

      {% comment %} Step 3 {% endcomment %}
      <div class="smws__card">
        <div class="smws__media" tabindex="0">
          {% if section.settings.image_3 != blank %}
            <img
              class="smws__img"
              src="{{ section.settings.image_3 | image_url: width: 1400 }}"
              alt="{{ section.settings.image_3.alt | escape }}"
              loading="lazy"
              width="1400"
              height="1400"
            >
          {% else %}
            <img
              class="smws__img"
              src="https://placehold.co/1400x1400"
              alt="Placeholder"
              loading="lazy"
              width="1400"
              height="1400"
            >
          {% endif %}
        </div>

        <div class="smws__cap">
          {% if section.settings.show_numbers %}
            <span class="smws__num" aria-hidden="true">3</span>
          {% endif %}
          <span>{{ section.settings.caption_3 | escape }}</span>
        </div>
      </div>
    </div>
  </div>

  <script>
    (function(){
      var root = document.getElementById('sm-steps-{{ section.id }}');
      if(!root) return;
      root.setAttribute('data-anim', {{ section.settings.enable_animations | json }} ? 'true' : 'false');
    })();
  </script>
</section>