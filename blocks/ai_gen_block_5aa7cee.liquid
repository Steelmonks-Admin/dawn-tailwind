{% doc %}
  @prompt
    create me a thin block i can enter 3 usps next to each other on mobile, containing a layout like this: 
    ✔ Für draußen geeignet · ✔ Wetterfest · ✔ Individuell gefertigt, der hintergrund soll weiß sein
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-usp-bar-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-usp-bar-container-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: {{ block.settings.spacing }}px;
    flex-wrap: wrap;
  }

  .ai-usp-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 6px;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    white-space: nowrap;
  }

  .ai-usp-icon-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    color: {{ block.settings.icon_color }};
  }

  .ai-usp-text-{{ ai_gen_id }} {
    line-height: 1.2;
  }

  @media screen and (max-width: 749px) {
    .ai-usp-bar-container-{{ ai_gen_id }} {
      gap: {{ block.settings.spacing_mobile }}px;
    }

    .ai-usp-item-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size_mobile }}px;
    }

    .ai-usp-icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size_mobile }}px;
      height: {{ block.settings.icon_size_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-usp-bar-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-usp-bar-container-{{ ai_gen_id }}">
    {% if block.settings.usp_1 != blank %}
      <div class="ai-usp-item-{{ ai_gen_id }}">
        <svg class="ai-usp-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="20 6 9 17 4 12"></polyline>
        </svg>
        <span class="ai-usp-text-{{ ai_gen_id }}">{{ block.settings.usp_1 }}</span>
      </div>
    {% endif %}

    {% if block.settings.usp_2 != blank %}
      <div class="ai-usp-item-{{ ai_gen_id }}">
        <svg class="ai-usp-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="20 6 9 17 4 12"></polyline>
        </svg>
        <span class="ai-usp-text-{{ ai_gen_id }}">{{ block.settings.usp_2 }}</span>
      </div>
    {% endif %}

    {% if block.settings.usp_3 != blank %}
      <div class="ai-usp-item-{{ ai_gen_id }}">
        <svg class="ai-usp-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="20 6 9 17 4 12"></polyline>
        </svg>
        <span class="ai-usp-text-{{ ai_gen_id }}">{{ block.settings.usp_3 }}</span>
      </div>
    {% endif %}
  </div>
</div>

