{% doc %}
  @prompt
    create me an image slider with short text underneath for each image
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-slider-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    position: relative;
    overflow: hidden;
    margin: 0 auto;
  }

  .ai-image-slider-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
  }

  .ai-image-slider-wrapper-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease;
    width: 100%;
  }

  .ai-image-slider-slide-{{ ai_gen_id }} {
    min-width: 100%;
    flex-shrink: 0;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.text_spacing }}px;
  }

  .ai-image-slider-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-image-slider-image-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    object-fit: cover;
    display: block;
  }

  .ai-image-slider-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-image-slider-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-image-slider-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-image-slider-text-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
    padding: 0 {{ block.settings.text_padding }}px;
  }

  .ai-image-slider-controls-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: {{ block.settings.controls_spacing }}px;
    gap: 16px;
  }

  .ai-image-slider-arrows-{{ ai_gen_id }} {
    display: flex;
    gap: 12px;
  }

  .ai-image-slider-arrow-{{ ai_gen_id }} {
    width: {{ block.settings.arrow_size }}px;
    height: {{ block.settings.arrow_size }}px;
    border-radius: 50%;
    background-color: {{ block.settings.arrow_background }};
    color: {{ block.settings.arrow_color }};
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease;
  }

  .ai-image-slider-arrow-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.arrow_hover_background }};
  }

  .ai-image-slider-arrow-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .ai-image-slider-arrow-{{ ai_gen_id }} svg {
    width: calc({{ block.settings.arrow_size }}px * 0.5);
    height: calc({{ block.settings.arrow_size }}px * 0.5);
  }

  .ai-image-slider-dots-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
    justify-content: center;
    flex-grow: 1;
  }

  .ai-image-slider-dot-{{ ai_gen_id }} {
    width: {{ block.settings.dot_size }}px;
    height: {{ block.settings.dot_size }}px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    border: none;
    cursor: pointer;
    padding: 0;
    transition: background-color 0.3s ease, transform 0.3s ease;
  }

  .ai-image-slider-dot-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.dot_active_color }};
    transform: scale(1.2);
  }

  @media screen and (max-width: 749px) {
    .ai-image-slider-{{ ai_gen_id }} {
      width: 100%;
    }

    .ai-image-slider-image-{{ ai_gen_id }},
    .ai-image-slider-placeholder-{{ ai_gen_id }} {
      height: {{ block.settings.image_height | times: 0.7 }}px;
    }

    .ai-image-slider-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<image-slider-{{ ai_gen_id }} class="ai-image-slider-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-image-slider-container-{{ ai_gen_id }}">
    <div class="ai-image-slider-wrapper-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        {% liquid
          assign image_key = 'image_' | append: i
          assign text_key = 'text_' | append: i
          assign image = block.settings[image_key]
          assign text = block.settings[text_key]
        %}

        <div class="ai-image-slider-slide-{{ ai_gen_id }}" data-slide="{{ forloop.index0 }}">
          <div class="ai-image-slider-image-wrapper-{{ ai_gen_id }}">
            {% if image %}
              <img
                src="{{ image | image_url: width: 1200 }}"
                alt="{{ image.alt | escape }}"
                loading="lazy"
                width="{{ image.width }}"
                height="{{ image.height }}"
                class="ai-image-slider-image-{{ ai_gen_id }}"
              >
            {% else %}
              <div class="ai-image-slider-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
                {% if forloop.first %}
                  <div class="ai-image-slider-empty-state-{{ ai_gen_id }}">
                    Add images to create your slider
                  </div>
                {% endif %}
              </div>
            {% endif %}
          </div>

          {% if text != blank %}
            <div class="ai-image-slider-text-{{ ai_gen_id }}">
              {{ text }}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>

  <div class="ai-image-slider-controls-{{ ai_gen_id }}">
    <div class="ai-image-slider-arrows-{{ ai_gen_id }}">
      <button
        class="ai-image-slider-arrow-{{ ai_gen_id }} ai-image-slider-prev-{{ ai_gen_id }}"
        aria-label="Previous slide"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
      </button>
      <button
        class="ai-image-slider-arrow-{{ ai_gen_id }} ai-image-slider-next-{{ ai_gen_id }}"
        aria-label="Next slide"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </button>
    </div>

    <div class="ai-image-slider-dots-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        <button
          class="ai-image-slider-dot-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
          data-slide="{{ forloop.index0 }}"
          aria-label="Go to slide {{ forloop.index }}"
        ></button>
      {% endfor %}
    </div>
  </div>
</image-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class ImageSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.totalSlides = 5;
      }

      connectedCallback() {
        this.wrapper = this.querySelector('.ai-image-slider-wrapper-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-image-slider-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-image-slider-next-{{ ai_gen_id }}');
        this.dots = this.querySelectorAll('.ai-image-slider-dot-{{ ai_gen_id }}');

        this.prevButton.addEventListener('click', () => this.goToPrevSlide());
        this.nextButton.addEventListener('click', () => this.goToNextSlide());

        this.dots.forEach((dot) => {
          dot.addEventListener('click', (e) => {
            const slideIndex = parseInt(e.currentTarget.dataset.slide);
            this.goToSlide(slideIndex);
          });
        });

        this.updateButtons();

        let startX = 0;
        let endX = 0;

        this.wrapper.addEventListener('touchstart', (e) => {
          startX = e.touches[0].clientX;
        });

        this.wrapper.addEventListener('touchend', (e) => {
          endX = e.changedTouches[0].clientX;
          if (startX - endX > 50) {
            this.goToNextSlide();
          } else if (endX - startX > 50) {
            this.goToPrevSlide();
          }
        });
      }

      goToSlide(index) {
        this.currentSlide = index;
        this.wrapper.style.transform = `translateX(-${this.currentSlide * 100}%)`;
        this.updateDots();
        this.updateButtons();
      }

      goToNextSlide() {
        if (this.currentSlide < this.totalSlides - 1) {
          this.currentSlide++;
          this.goToSlide(this.currentSlide);
        }
      }

      goToPrevSlide() {
        if (this.currentSlide > 0) {
          this.currentSlide--;
          this.goToSlide(this.currentSlide);
        }
      }

      updateDots() {
        this.dots.forEach((dot, index) => {
          if (index === this.currentSlide) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      }

      updateButtons() {
        this.prevButton.disabled = this.currentSlide === 0;
        this.nextButton.disabled = this.currentSlide === this.totalSlides - 1;
      }
    }

    customElements.define('image-slider-{{ ai_gen_id }}', ImageSlider{{ ai_gen_id }});
  })();
</script>

