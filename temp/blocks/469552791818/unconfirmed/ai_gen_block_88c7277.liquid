{% doc %}
  @prompt
    create me a rectangular field for 4 Icon-USPs i can use. Each icon should be editable and have one line of text next to it. Adapted to mobile and desktop, make the text editable.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-usp-container-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-usp-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: {{ block.settings.gap }}px;
    max-width: 100%;
  }

  .ai-usp-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.icon_text_gap }}px;
  }

  .ai-usp-icon-wrapper-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-usp-icon-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .ai-usp-icon-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-usp-icon-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-usp-text-{{ ai_gen_id }} {
    flex: 1;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.4;
  }

  @media screen and (min-width: 750px) {
    .ai-usp-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.desktop_columns }}, 1fr);
    }

    .ai-usp-container-{{ ai_gen_id }} {
      width: {{ block.settings.desktop_width_percent }}%;
      margin: 0 auto;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-usp-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.mobile_columns }}, 1fr);
    }

    .ai-usp-icon-wrapper-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.8 }}px;
      height: {{ block.settings.icon_size | times: 0.8 }}px;
    }

    .ai-usp-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<usp-block-{{ ai_gen_id }} class="ai-usp-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-usp-grid-{{ ai_gen_id }}">
    {% for i in (1..4) %}
      {% liquid
        assign icon_key = 'icon_' | append: i
        assign text_key = 'text_' | append: i
        assign icon = block.settings[icon_key]
        assign text = block.settings[text_key]
      %}

      <div class="ai-usp-item-{{ ai_gen_id }}">
        <div class="ai-usp-icon-wrapper-{{ ai_gen_id }}">
          {% if icon %}
            <img
              src="{{ icon | image_url: width: 200 }}"
              alt="{{ text | escape }}"
              loading="lazy"
              width="200"
              height="200"
            >
          {% else %}
            <div class="ai-usp-icon-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>
        <div class="ai-usp-text-{{ ai_gen_id }}">
          {% if text != blank %}
            {{ text }}
          {% else %}
            Add USP text {{ i }}
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</usp-block-{{ ai_gen_id }}>

<script>
  (function() {
    class UspBlock{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }
    }
    customElements.define('usp-block-{{ ai_gen_id }}', UspBlock{{ ai_gen_id }});
  })();
</script>

