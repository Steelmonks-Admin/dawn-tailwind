{% doc %}
  @prompt
    create me a section for a short headline and a subheadline below it. Both text should be editable, also the space above and below , no background color, the background should be white, give me an option for the padding on the sides for the text
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-headline-block-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding-top: {{ block.settings.spacing_top }}px;
    padding-bottom: {{ block.settings.spacing_bottom }}px;
    padding-left: {{ block.settings.spacing_sides }}px;
    padding-right: {{ block.settings.spacing_sides }}px;
    background-color: #ffffff;
  }

  .ai-headline-block__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.content_width }}px;
    margin: 0 auto;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-headline-block__headline-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.headline_size }}px;
    color: {{ block.settings.headline_color }};
    font-weight: 600;
  }

  .ai-headline-block__subheadline-{{ ai_gen_id }} {
    margin: {{ block.settings.spacing_between }}px 0 0 0;
    font-size: {{ block.settings.subheadline_size }}px;
    color: {{ block.settings.subheadline_color }};
    font-weight: 400;
  }

  @media screen and (max-width: 749px) {
    .ai-headline-block__headline-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.headline_size }}px * 0.8);
    }

    .ai-headline-block__subheadline-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subheadline_size }}px * 0.85);
    }
  }
{% endstyle %}

<div class="ai-headline-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-headline-block__container-{{ ai_gen_id }}">
    {% if block.settings.headline != blank %}
      <h2 class="ai-headline-block__headline-{{ ai_gen_id }}">
        {{ block.settings.headline }}
      </h2>
    {% endif %}

    {% if block.settings.subheadline != blank %}
      <p class="ai-headline-block__subheadline-{{ ai_gen_id }}">
        {{ block.settings.subheadline }}
      </p>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Headline with subheadline",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "inline_richtext",
      "id": "headline",
      "label": "Headline",
      "default": "Your headline here"
    },
    {
      "type": "inline_richtext",
      "id": "subheadline",
      "label": "Subheadline",
      "default": "Add a descriptive subheadline to provide more context"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "content_width",
      "label": "Content width",
      "min": 400,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "default": 800
    },
    {
      "type": "range",
      "id": "headline_size",
      "label": "Headline size",
      "min": 20,
      "max": 80,
      "step": 2,
      "unit": "px",
      "default": 40
    },
    {
      "type": "color",
      "id": "headline_color",
      "label": "Headline color",
      "default": "#090a0c"
    },
    {
      "type": "range",
      "id": "subheadline_size",
      "label": "Subheadline size",
      "min": 12,
      "max": 32,
      "step": 2,
      "unit": "px",
      "default": 18
    },
    {
      "type": "color",
      "id": "subheadline_color",
      "label": "Subheadline color",
      "default": "#090a0c"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "spacing_top",
      "label": "Space above",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "spacing_bottom",
      "label": "Space below",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "spacing_sides",
      "label": "Side padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "spacing_between",
      "label": "Space between texts",
      "min": 4,
      "max": 40,
      "step": 4,
      "unit": "px",
      "default": 12
    }
  ],
  "presets": [
    {
      "name": "Headline with subheadline"
    }
  ]
}
{% endschema %}
