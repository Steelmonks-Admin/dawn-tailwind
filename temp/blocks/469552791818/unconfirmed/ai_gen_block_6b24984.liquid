{% doc %}
  @prompt
    create me an image slider with short text underneath for each image, Remove the navigation dots, move the arrows to the middle and add a setting for automatic scolling after a set time. Make the image space horizontal.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-slider-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    position: relative;
    overflow: hidden;
  }

  .ai-image-slider-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
  }

  .ai-image-slider-wrapper-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease;
    width: 100%;
  }

  .ai-image-slider-slide-{{ ai_gen_id }} {
    min-width: 100%;
    flex-shrink: 0;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.text_spacing }}px;
  }

  .ai-image-slider-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-image-slider-image-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    object-fit: cover;
    display: block;
  }

  .ai-image-slider-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-image-slider-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-image-slider-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-image-slider-text-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
    padding: 0 {{ block.settings.text_padding }}px;
  }

  .ai-image-slider-arrow-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: {{ block.settings.arrow_size }}px;
    height: {{ block.settings.arrow_size }}px;
    border-radius: 50%;
    background-color: {{ block.settings.arrow_background }};
    color: {{ block.settings.arrow_color }};
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease, opacity 0.3s ease;
    z-index: 10;
  }

  .ai-image-slider-arrow-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.arrow_hover_background }};
  }

  .ai-image-slider-prev-{{ ai_gen_id }} {
    left: {{ block.settings.arrow_offset }}px;
  }

  .ai-image-slider-next-{{ ai_gen_id }} {
    right: {{ block.settings.arrow_offset }}px;
  }

  .ai-image-slider-arrow-{{ ai_gen_id }} svg {
    width: calc({{ block.settings.arrow_size }}px * 0.5);
    height: calc({{ block.settings.arrow_size }}px * 0.5);
  }

  @media screen and (max-width: 749px) {
    .ai-image-slider-image-{{ ai_gen_id }},
    .ai-image-slider-placeholder-{{ ai_gen_id }} {
      height: {{ block.settings.image_height | times: 0.7 }}px;
    }

    .ai-image-slider-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-image-slider-arrow-{{ ai_gen_id }} {
      width: {{ block.settings.arrow_size | times: 0.8 }}px;
      height: {{ block.settings.arrow_size | times: 0.8 }}px;
    }

    .ai-image-slider-prev-{{ ai_gen_id }} {
      left: {{ block.settings.arrow_offset | times: 0.5 }}px;
    }

    .ai-image-slider-next-{{ ai_gen_id }} {
      right: {{ block.settings.arrow_offset | times: 0.5 }}px;
    }
  }
{% endstyle %}

<image-slider-{{ ai_gen_id }}
  class="ai-image-slider-{{ ai_gen_id }}"
  data-autoplay="{{ block.settings.enable_autoplay }}"
  data-autoplay-speed="{{ block.settings.autoplay_speed }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-image-slider-container-{{ ai_gen_id }}">
    <div class="ai-image-slider-wrapper-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        {% liquid
          assign image_key = 'image_' | append: i
          assign text_key = 'text_' | append: i
          assign image = block.settings[image_key]
          assign text = block.settings[text_key]
        %}

        <div class="ai-image-slider-slide-{{ ai_gen_id }}" data-slide="{{ forloop.index0 }}">
          <div class="ai-image-slider-image-wrapper-{{ ai_gen_id }}">
            {% if image %}
              <img
                src="{{ image | image_url: width: 1600 }}"
                alt="{{ image.alt | escape }}"
                loading="lazy"
                width="{{ image.width }}"
                height="{{ image.height }}"
                class="ai-image-slider-image-{{ ai_gen_id }}"
              >
            {% else %}
              <div class="ai-image-slider-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
                {% if forloop.first %}
                  <div class="ai-image-slider-empty-state-{{ ai_gen_id }}">
                    Add images to create your slider
                  </div>
                {% endif %}
              </div>
            {% endif %}
          </div>

          {% if text != blank %}
            <div class="ai-image-slider-text-{{ ai_gen_id }}">
              {{ text }}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>

    <button
      class="ai-image-slider-arrow-{{ ai_gen_id }} ai-image-slider-prev-{{ ai_gen_id }}"
      aria-label="Previous slide"
    >
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="15 18 9 12 15 6"></polyline>
      </svg>
    </button>
    <button
      class="ai-image-slider-arrow-{{ ai_gen_id }} ai-image-slider-next-{{ ai_gen_id }}"
      aria-label="Next slide"
    >
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="9 18 15 12 9 6"></polyline>
      </svg>
    </button>
  </div>
</image-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class ImageSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.totalSlides = 5;
        this.autoplayInterval = null;
      }

      connectedCallback() {
        this.wrapper = this.querySelector('.ai-image-slider-wrapper-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-image-slider-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-image-slider-next-{{ ai_gen_id }}');
        this.autoplayEnabled = this.dataset.autoplay === 'true';
        this.autoplaySpeed = parseInt(this.dataset.autoplaySpeed) * 1000;

        this.prevButton.addEventListener('click', () => {
          this.stopAutoplay();
          this.goToPrevSlide();
        });

        this.nextButton.addEventListener('click', () => {
          this.stopAutoplay();
          this.goToNextSlide();
        });

        let startX = 0;
        let endX = 0;

        this.wrapper.addEventListener('touchstart', (e) => {
          startX = e.touches[0].clientX;
          this.stopAutoplay();
        });

        this.wrapper.addEventListener('touchend', (e) => {
          endX = e.changedTouches[0].clientX;
          if (startX - endX > 50) {
            this.goToNextSlide();
          } else if (endX - startX > 50) {
            this.goToPrevSlide();
          }
        });

        if (this.autoplayEnabled) {
          this.startAutoplay();

          this.addEventListener('mouseenter', () => this.stopAutoplay());
          this.addEventListener('mouseleave', () => {
            if (this.autoplayEnabled) {
              this.startAutoplay();
            }
          });
        }
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }

      startAutoplay() {
        this.stopAutoplay();
        this.autoplayInterval = setInterval(() => {
          if (this.currentSlide < this.totalSlides - 1) {
            this.goToNextSlide();
          } else {
            this.goToSlide(0);
          }
        }, this.autoplaySpeed);
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      goToSlide(index) {
        this.currentSlide = index;
        this.wrapper.style.transform = `translateX(-${this.currentSlide * 100}%)`;
      }

      goToNextSlide() {
        if (this.currentSlide < this.totalSlides - 1) {
          this.currentSlide++;
        } else {
          this.currentSlide = 0;
        }
        this.goToSlide(this.currentSlide);
      }

      goToPrevSlide() {
        if (this.currentSlide > 0) {
          this.currentSlide--;
        } else {
          this.currentSlide = this.totalSlides - 1;
        }
        this.goToSlide(this.currentSlide);
      }
    }

    customElements.define('image-slider-{{ ai_gen_id }}', ImageSlider{{ ai_gen_id }});
  })();
</script>

