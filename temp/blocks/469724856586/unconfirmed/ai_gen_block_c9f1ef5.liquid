    display: block;
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .ai-slider-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .ai-slider-track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease-in-out;
    height: 100%;
  }

  .ai-slider-slide-{{ ai_gen_id }} {
    min-width: 100%;
    flex-shrink: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .ai-slider-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
  }

  .ai-slider-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
  }

  .ai-slider-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

