{% doc %}
  @prompt
    create me a section for a  headline and a subheadline below it. Both text should be editable, size, font, bolding etc. also the space above and below , no background color, give me an option for the padding on the sides for the text, Make it able so than i can move text to another line in the subheadline.  All text must be editable - font - size - padding to top, bottom and sides. The Spacing between elements should be fully editable, to be able to leave no space.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-text-block-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding-top: {{ block.settings.padding_top }}px;
    padding-bottom: {{ block.settings.padding_bottom }}px;
  }

  .ai-text-block__container-{{ ai_gen_id }} {
    padding-left: {{ block.settings.padding_sides }}px;
    padding-right: {{ block.settings.padding_sides }}px;
    max-width: 100%;
  }

  .ai-text-block__headline-{{ ai_gen_id }} {
    font-family: {{ block.settings.headline_font.family }}, {{ block.settings.headline_font.fallback_families }};
    font-weight: {{ block.settings.headline_font.weight }};
    font-style: {{ block.settings.headline_font.style }};
    font-size: {{ block.settings.headline_size }}px;
    color: {{ block.settings.headline_color }};
    margin: 0;
    padding: 0;
    {% if block.settings.headline_bold %}
      font-weight: 700;
    {% endif %}
  }

  .ai-text-block__subheadline-{{ ai_gen_id }} {
    font-family: {{ block.settings.subheadline_font.family }}, {{ block.settings.subheadline_font.fallback_families }};
    font-weight: {{ block.settings.subheadline_font.weight }};
    font-style: {{ block.settings.subheadline_font.style }};
    font-size: {{ block.settings.subheadline_size }}px;
    color: {{ block.settings.subheadline_color }};
    margin: 0;
    padding: 0;
    margin-top: {{ block.settings.spacing_between }}px;
    {% if block.settings.subheadline_bold %}
      font-weight: 700;
    {% endif %}
  }

  @media screen and (max-width: 749px) {
    .ai-text-block__headline-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.headline_size }}px * 0.8);
    }

    .ai-text-block__subheadline-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subheadline_size }}px * 0.8);
    }
  }
{% endstyle %}

<div class="ai-text-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-text-block__container-{{ ai_gen_id }}">
    {% if block.settings.headline != blank %}
      <h2 class="ai-text-block__headline-{{ ai_gen_id }}">
        {{ block.settings.headline }}
      </h2>
    {% endif %}

    {% if block.settings.subheadline != blank %}
      <div class="ai-text-block__subheadline-{{ ai_gen_id }}">
        {{ block.settings.subheadline }}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Headline and subheadline",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Headline"
    },
    {
      "type": "textarea",
      "id": "headline",
      "label": "Headline text",
      "default": "Your headline here"
    },
    {
      "type": "font_picker",
      "id": "headline_font",
      "label": "Font",
      "default": "poppins_n6"
    },
    {
      "type": "range",
      "id": "headline_size",
      "min": 12,
      "max": 120,
      "step": 2,
      "unit": "px",
      "label": "Font size",
      "default": 48
    },
    {
      "type": "checkbox",
      "id": "headline_bold",
      "label": "Bold",
      "default": true
    },
    {
      "type": "color",
      "id": "headline_color",
      "label": "Text color",
      "default": "#090a0c"
    },
    {
      "type": "header",
      "content": "Subheadline"
    },
    {
      "type": "textarea",
      "id": "subheadline",
      "label": "Subheadline text",
      "default": "Your subheadline text here"
    },
    {
      "type": "font_picker",
      "id": "subheadline_font",
      "label": "Font",
      "default": "poppins_n4"
    },
    {
      "type": "range",
      "id": "subheadline_size",
      "min": 10,
      "max": 80,
      "step": 2,
      "unit": "px",
      "label": "Font size",
      "default": 20
    },
    {
      "type": "checkbox",
      "id": "subheadline_bold",
      "label": "Bold",
      "default": false
    },
    {
      "type": "color",
      "id": "subheadline_color",
      "label": "Text color",
      "default": "#090a0c"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "spacing_between",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Space between headline and subheadline",
      "default": 16
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_sides",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Padding left and right",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Headline and subheadline"
    }
  ]
}
{% endschema %}
